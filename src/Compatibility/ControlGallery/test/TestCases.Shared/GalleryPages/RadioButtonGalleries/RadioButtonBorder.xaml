<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Microsoft.Maui.Controls.ControlGallery.GalleryPages.RadioButtonGalleries.RadioButtonBorder"
    Title="RadioButton Border">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="RadioButton with Border" />
            <RadioButton 
                Content="Option 1" 
                BackgroundColor="Yellow"
                BorderColor="Red" 
                BorderWidth="4" 
                CornerRadius="12" />
            <RadioButton 
                Content="Option 2"
                BackgroundColor="Yellow" />
            <RadioButton 
                Content="Option 3" />
            <RadioButton 
                Content="Option 4"
                BorderColor="Green"
                BorderWidth="4" 
                CornerRadius="12"
                IsChecked="true" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>