<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Microsoft.Maui.Controls.Compatibility.ControlGallery.GalleryPages.GradientGalleries.SolidColorBrushConverterGallery"
    Title="SolidColorBrushConverter Gallery">
    <ContentPage.Resources>
        <ResourceDictionary>

            <Style TargetType="Grid">
                <Setter Property="HeightRequest" Value="60" />
            </Style>

        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.Content>
        <StackLayout
            Padding="12">
            <Label
                Text="Using BackgroundColor (Red)"/>
            <Grid
                BackgroundColor="Red"/>
                <Label
                Text="Using Background (Red)"/>
            <Grid
                Background="Red"/>
            <Label
                Text="Using BackgroundColor (#FF9988)"/>
            <Grid
                BackgroundColor="#FF9988"/>
                <Label
                Text="Using Background (#FF9988)"/>
            <Grid
                Background="#FF9988"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
