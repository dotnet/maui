<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Microsoft.Maui.Controls.Compatibility.ControlGallery.GalleryPages.GradientGalleries.AnimateBrushGallery"
    Title="Animate Brush Gallery">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <Label
                    Padding="12"
                    BackgroundColor="Black"
                    TextColor="White"
                    Text="The Brush is updated every second."/>
                <Frame
                    x:Name="GradientView"
                    BorderColor="LightGray"
                    HasShadow="True"
                    HeightRequest="120"
                    WidthRequest="120"
                    CornerRadius="12"
                    Margin="12"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
