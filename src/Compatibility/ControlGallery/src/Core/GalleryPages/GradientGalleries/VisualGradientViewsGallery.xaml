<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Microsoft.Maui.Controls.Compatibility.ControlGallery.GalleryPages.GradientGalleries.VisualGradientViewsGallery"
    Title="Gradient Views Gallery (Visual)"
    Visual="Material">
    <ContentPage.Resources>
        <ResourceDictionary>

            <Thickness x:Key="ViewMargin">0, 6</Thickness>

            <SolidColorBrush 
                x:Key="SolidColor"
                Color="Red"/>

            <LinearGradientBrush 
                x:Key="HorizontalLinearGradient"
                StartPoint="0, 0"
                EndPoint="1, 0">
                <LinearGradientBrush.GradientStops>
                    <GradientStop Color="#8A2387" Offset="0.1" />
                    <GradientStop Color="#E94057" Offset="0.6" />
                    <GradientStop Color="#F27121" Offset="1.0" />
                </LinearGradientBrush.GradientStops>
            </LinearGradientBrush>

            <LinearGradientBrush 
                x:Key="VerticalLinearGradient"
                StartPoint="0, 0"
                EndPoint="0, 1">
                <LinearGradientBrush.GradientStops>
                    <GradientStop Color="#8A2387" Offset="0.1" />
                    <GradientStop Color="#E94057" Offset="0.6" />
                    <GradientStop Color="#F27121" Offset="1.0" />
                </LinearGradientBrush.GradientStops>
            </LinearGradientBrush>

            <RadialGradientBrush
                x:Key="RadialGradient"
                Center="0.5,0.5" 
                Radius="0.5">
                <RadialGradientBrush.GradientStops>
                    <GradientStop Color="#8A2387" Offset="0.1" />
                    <GradientStop Color="#E94057" Offset="0.6" />
                    <GradientStop Color="#F27121" Offset="1.0" />
                </RadialGradientBrush.GradientStops>
            </RadialGradientBrush>

        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid
                Grid.Row="0">
                <Picker
                    x:Name="BackgroundPicker"
                    Title="Choose an option for the Background:"
                    SelectedIndexChanged="OnBackgroundSelectedIndexChanged">
                    <Picker.ItemsSource>
                        <x:Array Type="{x:Type x:String}">
                            <x:String>None</x:String>
                            <x:String>BackgroundColor</x:String>
                            <x:String>SolidColorBrush</x:String>
                            <x:String>Horizontal LinearGradientBrush</x:String>
                            <x:String>Vertical LinearGradientBrush</x:String>
                            <x:String>RadialGradientBrush</x:String>
                        </x:Array>
                    </Picker.ItemsSource>
                </Picker>
            </Grid>
            <ScrollView
                Grid.Row="1">
                <StackLayout>
                    <ActivityIndicator
                        x:Name="ActivityIndicator"
                        Margin="{StaticResource ViewMargin}"/>
                    <Button
                        x:Name="Button"
                        CornerRadius="12"
                        Text="Button"
                        Margin="{StaticResource ViewMargin}"/>
                    <CheckBox
                        x:Name="CheckBox"
                        Margin="{StaticResource ViewMargin}"/>
                    <DatePicker
                        x:Name="DatePicker"
                        Margin="{StaticResource ViewMargin}"/>
                    <Editor
                        x:Name="Editor"
                        Margin="{StaticResource ViewMargin}"/>
                    <Entry
                        x:Name="Entry"
                        Margin="{StaticResource ViewMargin}"/>
                    <Frame
                        x:Name="Frame"
                        CornerRadius="12"
                        HasShadow="True"
                        HeightRequest="100"
                        Margin="{StaticResource ViewMargin}">
                        <Label
                            HorizontalOptions="Center"
                            VerticalOptions="Center"
                            Text="Frame"/>
                    </Frame>
                    <Picker
                        x:Name="Picker"
                        Margin="{StaticResource ViewMargin}"/>
                    <ProgressBar
                        x:Name="ProgressBar"
                        Margin="{StaticResource ViewMargin}"/>
                    <Slider
                        x:Name="Slider"
                        Margin="{StaticResource ViewMargin}"/>
                    <Stepper
                        x:Name="Stepper"
                        Margin="{StaticResource ViewMargin}"/>
                    <TimePicker
                        x:Name="TimePicker"
                        Margin="{StaticResource ViewMargin}"/>
                </StackLayout>
            </ScrollView>
        </Grid>
    </ContentPage.Content>
</ContentPage>