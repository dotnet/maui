<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Microsoft.Maui.Controls.Compatibility.ControlGallery.GalleryPages.GradientGalleries.GradientViewsGallery"
             Title="Brushes View Gallery">
    <ContentPage.Resources>
        <ResourceDictionary>

            <SolidColorBrush 
                x:Key="SolidColor"
                Color="Red"/>

            <LinearGradientBrush 
                x:Key="HorizontalLinearGradient"
                StartPoint="0, 0"
                EndPoint="1, 0">
                <LinearGradientBrush.GradientStops>
                    <GradientStop Color="#8A2387" Offset="0.1" />
                    <GradientStop Color="#E94057" Offset="0.6" />
                    <GradientStop Color="#F27121" Offset="1.0" />
                </LinearGradientBrush.GradientStops>
            </LinearGradientBrush>

            <LinearGradientBrush 
                x:Key="VerticalLinearGradient"
                StartPoint="0, 0"
                EndPoint="0, 1">
                <LinearGradientBrush.GradientStops>
                    <GradientStop Color="#8A2387" Offset="0.1" />
                    <GradientStop Color="#E94057" Offset="0.6" />
                    <GradientStop Color="#F27121" Offset="1.0" />
                </LinearGradientBrush.GradientStops>
            </LinearGradientBrush>

            <RadialGradientBrush
                x:Key="RadialGradient"
                Center="0.5,0.5" 
                Radius="0.5">
                <RadialGradientBrush.GradientStops>
                    <GradientStop Color="#8A2387" Offset="0.1" />
                    <GradientStop Color="#E94057" Offset="0.6" />
                    <GradientStop Color="#F27121" Offset="1.0" />
                </RadialGradientBrush.GradientStops>
            </RadialGradientBrush>

        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid
                Grid.Row="0">
                <Picker
                    x:Name="BackgroundPicker"
                    Title="Choose an option for the Background:"
                    SelectedIndexChanged="OnBackgroundSelectedIndexChanged">
                    <Picker.ItemsSource>
                        <x:Array Type="{x:Type x:String}">
                            <x:String>None</x:String>
                            <x:String>BackgroundColor</x:String>
                            <x:String>SolidColorBrush</x:String>
                            <x:String>Horizontal LinearGradientBrush</x:String>
                            <x:String>Vertical LinearGradientBrush</x:String>
                            <x:String>RadialGradientBrush</x:String>
                        </x:Array>
                    </Picker.ItemsSource>
                </Picker>
            </Grid>
            <ScrollView
                Grid.Row="1">
                <StackLayout
                    Padding="12">
                    <Button
                        x:Name="Button"
                        CornerRadius="12"
                        Text="Button"/>
                    <BoxView
                        x:Name="BoxView"
                        HeightRequest="100"/>
                    <BoxView
                        x:Name="CornerRadiusBoxView"
                        CornerRadius="12"
                        HeightRequest="100"/>
                    <CheckBox 
                         x:Name="CheckBox"/>
                    <CarouselView 
                        x:Name="CarouselView"
                        HeightRequest="120">
                        <CarouselView.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Label
                                        HorizontalOptions="Center"
                                        VerticalOptions="Center"
                                        Text="{Binding .}"/>
                                </Grid>
                            </DataTemplate>
                        </CarouselView.ItemTemplate>
                        <CarouselView.ItemsSource>
                            <x:Array Type="{x:Type x:String}">
                                <x:String>This</x:String>
                                <x:String>is</x:String>
                                <x:String>a</x:String>
                                <x:String>CarouselView</x:String>
                            </x:Array>
                        </CarouselView.ItemsSource>
                    </CarouselView>
                    <CollectionView 
                        x:Name="CollectionView"
                        HeightRequest="120">
                        <CollectionView.ItemsSource>
                            <x:Array Type="{x:Type x:String}">
                                <x:String>This</x:String>
                                <x:String>is</x:String>
                                <x:String>a</x:String>
                                <x:String>CollectionView</x:String>
                            </x:Array>
                        </CollectionView.ItemsSource>
                    </CollectionView>
                    <DatePicker
                        x:Name="DatePicker"/>
                    <Editor
                        x:Name="Editor"
                        Text="Editor"/>
                    <Entry
                        x:Name="Entry"
                        Text="Entry"/>
                    <Frame
                        x:Name="Frame"
                        CornerRadius="12"
                        HeightRequest="100">
                        <Label
                            HorizontalOptions="Center"
                            VerticalOptions="Center"
                            Text="Frame"/>
                    </Frame>
                    <Grid
                        x:Name="Grid"
                        HeightRequest="100">
                        <Label
                            HorizontalOptions="Center"
                            VerticalOptions="Center"
                            Text="Grid"/>
                    </Grid>
                    <ImageButton
                        x:Name="ImageButton"
                        HeightRequest="60">
                        <ImageButton.Source>
                            <OnPlatform x:TypeArguments="ImageSource">
                                <On Platform="iOS" Value="cover1.jpg"/>
                                <On Platform="Android" Value="cover1.jpg"/>
                                <On Platform="UWP" Value="Assets/coverassets1.jpg"/>
                            </OnPlatform>
                        </ImageButton.Source>
                    </ImageButton>
                    <Label
                        x:Name="Label"
                        Text="Label"/>
                    <ListView 
                        x:Name="ListView"
                        HeightRequest="100">
                        <ListView.ItemsSource>
                            <x:Array Type="{x:Type x:String}">
                                <x:String>This</x:String>
                                <x:String>is</x:String>
                                <x:String>a</x:String>
                                <x:String>ListView</x:String>
                            </x:Array>
                        </ListView.ItemsSource>
                    </ListView>
                    <Picker 
                        x:Name="Picker"
                        Title="Gradients"
                        SelectedIndex="0">
                        <Picker.ItemsSource>
                            <x:Array Type="{x:Type x:String}">
                                <x:String>Picker</x:String>
                            </x:Array>
                        </Picker.ItemsSource>
                    </Picker>
                    <ScrollView
                         x:Name="ScrollView"
                         HeightRequest="150">
                        <StackLayout>
                            <Label 
                                 Text="This"/>
                            <Label 
                                 Text="is"/>
                            <Label 
                                 Text="a"/>
                            <Label 
                                 Text="ScrollView"/>
                        </StackLayout>
                    </ScrollView>
                    <SearchBar
                        x:Name="SearchBar"
                        Text="SearchBar"/>
                    <Slider
                        x:Name="Slider"/>
                    <SwipeView
                        x:Name="SwipeView"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        Margin="12">
                        <SwipeView.LeftItems>
                            <SwipeItems
                                Mode="Execute">
                                <SwipeItem
                                    Text="Delete"
                                    Icon="coffee.png"
                                    BackgroundColor="Red"/>
                            </SwipeItems>
                        </SwipeView.LeftItems>
                        <SwipeView.Content>
                            <Grid
                                x:Name="SwipeViewContent"
                                HeightRequest="60"
                                WidthRequest="300">
                                <Label
                                    HorizontalOptions="Center"
                                    VerticalOptions="Center"
                                    Text="Swipe Left"/>
                            </Grid>
                        </SwipeView.Content>
                    </SwipeView>
                    <Stepper
                        x:Name="Stepper"/>
                    <TableView
                        x:Name="TableView"
                        HeightRequest="100" />
                    <TimePicker
                        x:Name="TimePicker"/>
                </StackLayout>
            </ScrollView>
        </Grid>
    </ContentPage.Content>
</ContentPage>