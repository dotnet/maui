<?xml version="1.0" encoding="utf-8" ?>
<controls:TestContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:Microsoft.Maui.Controls.Compatibility.ControlGallery"
    x:Class="Microsoft.Maui.Controls.Compatibility.ControlGallery.Issues.Issue8689"
    Title="Issue 8689">
    <Grid
        BackgroundColor="Red">
        <RefreshView
            RefreshColor="Black"
            BackgroundColor="Yellow">
            <Grid
                Margin="48,0,0,0"
                BackgroundColor="Green">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Label
                    Grid.Row="0"
                    HorizontalOptions="FillAndExpand"
                    VerticalOptions="Center"
                    Text="If there is a red margin to the left, the test has passed."/>
                <CollectionView
                    Grid.Row="1"
                    HorizontalOptions="FillAndExpand"
                    ItemsSource="{Binding Items}"
                    SelectionMode="Multiple">
                    <CollectionView.ItemsLayout>
                        <LinearItemsLayout
                            Orientation="Vertical"
                            ItemSpacing="5"/>
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Frame
                                    Margin="10,2"
                                    Padding="0"
                                    CornerRadius="10"
                                    HeightRequest="50"
                                    InputTransparent="True"
                                    HasShadow="True"
                                    Visual="Default">
                                    <Label
                                        Text="{Binding}"
                                        Margin="10,0,0,0"
                                        VerticalOptions="Center"
                                        HorizontalOptions="Start"
                                        FontSize="Large"/>
                                </Frame>
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
                <Button
                    Grid.Row="2"
                    BorderColor="Blue"
                    BackgroundColor="Transparent"
                    BorderWidth="3"
                    HorizontalOptions="FillAndExpand"
                    VerticalOptions="Center"
                    Text="Button2"/>
        </Grid>
    </RefreshView>
    </Grid>
</controls:TestContentPage>