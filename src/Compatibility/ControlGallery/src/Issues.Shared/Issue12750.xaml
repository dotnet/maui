<?xml version="1.0" encoding="utf-8" ?>
<local:TestContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Test 12750" xmlns:local="using:Microsoft.Maui.Controls.Compatibility.ControlGallery"
    x:Class="Microsoft.Maui.Controls.Compatibility.ControlGallery.Issues.Issue12750">
    <StackLayout>
        <Label
            Padding="12"
            BackgroundColor="Black"
            TextColor="White"
            Text="Tap `Add To List` button, add a new Item, and then open each SwipeView. If there are no duplicate items and the layout is correct the test has passed."/>
        <StackLayout>
            <ListView
                x:Name="Issue12750ListView"
                HasUnevenRows="True"
                BackgroundColor="Transparent"
                SeparatorVisibility="None">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <SwipeView
                                BackgroundColor="YellowGreen">
                                <SwipeView.LeftItems>
                                    <SwipeItems>
                                        <SwipeItem
                                            Text="SwipeItem 1"
                                            BackgroundColor="LightCoral"/>
                                    </SwipeItems>
                                </SwipeView.LeftItems>
                                <SwipeView.RightItems>
                                    <SwipeItems>
                                        <SwipeItem
                                            Text="SwipeItem 2"
                                            BackgroundColor="LightGreen"/>
                                        <SwipeItem
                                            Text="SwipeItem 3"
                                            BackgroundColor="LightPink"/>
                                    </SwipeItems>
                                </SwipeView.RightItems>
                                <Grid
                                    Opacity="0.5"
                                    RowSpacing="0"
                                    Margin="10"
                                    HeightRequest="50"
                                    BackgroundColor="Yellow">
                                    <Label
                                        Text="{Binding}"
                                        HorizontalOptions="Center"
                                        VerticalOptions="Center"
                                        FontSize="Large"/>
                                </Grid>
                            </SwipeView>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Button
                Text="Add To List"
                Clicked="OnButtonClicked"/>
        </StackLayout>
    </StackLayout>
</local:TestContentPage>