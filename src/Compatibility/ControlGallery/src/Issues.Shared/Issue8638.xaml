<?xml version="1.0" encoding="utf-8" ?>
<controls:TestContentPage
    xmlns:controls="clr-namespace:Microsoft.Maui.Controls.Compatibility.ControlGallery"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:d="http://schemas.microsoft.com/dotnet/2021/maui/design"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    x:Class="Microsoft.Maui.Controls.Compatibility.ControlGallery.Issues.Issue8638">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Label
                Grid.Row="0"
                BackgroundColor="Black"
                TextColor="White"
                Text="Verify that the intersection of the red lines is always the center of an element of the CarouselView."/>
            <StackLayout
                Grid.Row="1">
                <Label
                    FontSize="10"
                    Text="PeekAreaInsets:"/>
                <Slider
                    x:Name="PeekAreaInsetsSlider"
                    Minimum="0"
                    Maximum="100"
                    Value="50"
                    ValueChanged="OnSliderValueChanged"/>
                <Label
                    HorizontalOptions="Center"
                    Text="{Binding Value, Source={x:Reference PeekAreaInsetsSlider}}"/>
            </StackLayout>
            <CarouselView
                Grid.Row="2"
                x:Name="CarouselView"
                ItemsSource="{Binding Items}"
                PeekAreaInsets="50, 0"
                HeightRequest="180">
                <CarouselView.ItemsLayout>
                    <LinearItemsLayout
                        Orientation="Horizontal"
                        ItemSpacing="20"
                        SnapPointsType="Mandatory"
                        SnapPointsAlignment="Center" />
                </CarouselView.ItemsLayout>
                <CarouselView.ItemTemplate>
                    <DataTemplate>
                        <Grid
                            BindingContext="{Binding}"
                            HeightRequest="170"
                            MinimumWidthRequest="250">
                            <Frame
                                HasShadow="False"
                                BackgroundColor="{Binding Color}"
                                CornerRadius="5" />
                            <StackLayout
                                BackgroundColor="#66FFFFFF"
                                VerticalOptions="End"
                                HorizontalOptions="Start">
                                <Label
                                    Text="{Binding Name}" /> 
                            </StackLayout> 
                        </Grid>
                    </DataTemplate>
                </CarouselView.ItemTemplate>
            </CarouselView>
            <Grid
                Grid.Row="2"
                InputTransparent="True">
                <Grid
                    BackgroundColor="Red"
                    HeightRequest="1"
                    VerticalOptions="Center" />
                <Grid
                    BackgroundColor="Red"
                    WidthRequest="1"
                    HorizontalOptions="Center" />
            </Grid>
        </Grid>
    </ContentPage.Content>
</controls:TestContentPage>