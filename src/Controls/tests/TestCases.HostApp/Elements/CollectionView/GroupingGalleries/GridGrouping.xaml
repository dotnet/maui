<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:local="clr-namespace:Maui.Controls.Sample.CollectionViewGalleries"
             xmlns:d="http://schemas.microsoft.com/dotnet/2021/maui/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="Maui.Controls.Sample.CollectionViewGalleries.GroupingGalleries.GridGrouping">
    <ContentPage.Content>
        <CollectionView x:Name="CollectionView" IsGrouped="True" Header="This is a header" Footer="This is a footer.">

            <CollectionView.ItemsLayout>
                <GridItemsLayout Span="2" HorizontalItemSpacing="5" Orientation="Vertical"></GridItemsLayout>
            </CollectionView.ItemsLayout>
            
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="local:CollectionViewGalleryTestItem">
                    <StackLayout>
                        <Label Text="{Binding Name, x:DataType={x:Null}}" Margin="5,0,0,0"/>
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>

            <CollectionView.GroupHeaderTemplate>
                <DataTemplate x:DataType="local:CollectionViewGalleryTestItem">

                    <Label Text="{Binding Name, x:DataType={x:Null}}" BackgroundColor="LightGreen" FontSize="16" FontAttributes="Bold"/>

                </DataTemplate>
            </CollectionView.GroupHeaderTemplate>

            <CollectionView.GroupFooterTemplate>
                <DataTemplate x:DataType="local:CollectionViewGalleryTestItem">
                    <StackLayout>
                        <Label Text="{Binding Count, StringFormat='{, x:DataType={x:Null}}Total members: {0:D}'}" BackgroundColor="Orange" 
							   Margin="0,0,0,15"/>
                    </StackLayout>
                </DataTemplate>
            </CollectionView.GroupFooterTemplate>

        </CollectionView>
    </ContentPage.Content>
</ContentPage>