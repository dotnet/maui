<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Maui.Controls.Sample"
             x:DataType="local:EntryViewModel"
             x:Class="Maui.Controls.Sample.EntryControlMainPage">
       <VerticalStackLayout Padding="20"
                            Spacing="8">
              <Label Text="Entry Control"
                     FontSize="20"
                     Margin="0,0,0,50"
                     HorizontalOptions="Center"/>

              <local:UITestEntry x:Name="EntryControl"
                                 IsCursorVisible="False"
                                 Text="{Binding Text, x:DataType={x:Null}}"
                                 Placeholder="{Binding Placeholder, x:DataType={x:Null}}"
                                 PlaceholderColor="{Binding PlaceholderColor, x:DataType={x:Null}}"
                                 TextColor="{Binding TextColor, x:DataType={x:Null}}"
                                 ClearButtonVisibility="{Binding ClearButtonVisibility, x:DataType={x:Null}}"
                                 HorizontalTextAlignment="{Binding HorizontalTextAlignment, x:DataType={x:Null}}"
                                 VerticalTextAlignment="{Binding VerticalTextAlignment, x:DataType={x:Null}}"
                                 IsPassword="{Binding IsPassword, x:DataType={x:Null}}"
                                 FontSize="{Binding FontSize, x:DataType={x:Null}}"
                                 CharacterSpacing="{Binding CharacterSpacing, x:DataType={x:Null}}"
                                 IsReadOnly="{Binding IsReadOnly, x:DataType={x:Null}}"
                                 IsTextPredictionEnabled="{Binding IsTextPredictionEnabled, x:DataType={x:Null}}"
                                 IsSpellCheckEnabled="{Binding IsSpellCheckEnabled, x:DataType={x:Null}}"
                                 Shadow="{Binding EntryShadow, x:DataType={x:Null}}"
                                 MaxLength="{Binding MaxLength, x:DataType={x:Null}}"
                                 SelectionLength="{Binding SelectionLength, x:DataType={x:Null}}"
                                 CursorPosition="{Binding CursorPosition, Mode=TwoWay, x:DataType={x:Null}}"
                                 ReturnType="{Binding ReturnType, x:DataType={x:Null}}"
                                 ReturnCommand="{Binding ReturnCommand, x:DataType={x:Null}}"
                                 ReturnCommandParameter="{Binding Text, x:DataType={x:Null}}"
                                 Keyboard="{Binding Keyboard, x:DataType={x:Null}}"
                                 FontFamily="{Binding FontFamily, x:DataType={x:Null}}"
                                 IsVisible="{Binding IsVisible, x:DataType={x:Null}}"
                                 IsEnabled="{Binding IsEnabled, x:DataType={x:Null}}"
                                 FlowDirection="{Binding FlowDirection, x:DataType={x:Null}}"
                                 HeightRequest="{Binding HeightRequest, x:DataType={x:Null}}"
                                 FontAttributes="{Binding FontAttributes, x:DataType={x:Null}}"
                                 TextTransform="{Binding TextTransform, x:DataType={x:Null}}"
                                 TextChanged="EntryControl_TextChanged"
                                 Completed="EntryControl_Completed"
                                 Focused="EntryControl_Focused"
                                 Unfocused="EntryControl_Unfocused"
                                 AutomationId="TestEntry"/>

              <Grid HeightRequest="130"/>

              <Button Text="Options"
                      FontSize="11"
                      Clicked="NavigateToOptionsPage_Clicked"
                      AutomationId="OptionsButton"/>

              <Grid ColumnSpacing="10"
                    Margin="0,10,0,10">
                     <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                     </Grid.RowDefinitions>
                     <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                     </Grid.ColumnDefinitions>

                     <!-- Row 1: Labels -->
                     <Label Text="Selection Length:"
                            FontSize="11"
                            Grid.Row="0"
                            Grid.Column="0"/>
                     <Label Text="Cursor position:"
                            FontSize="11"
                            Grid.Row="0"
                            Grid.Column="1"/>

                     <!-- Row 2: Entries -->
                     <local:UITestEntry x:Name="SelectionLengthEntry"
                                        Text="{Binding SelectionLength, x:DataType={x:Null}}"
                                        AutomationId="SelectionLengthEntry"
                                        IsCursorVisible="False"
                                        TextChanged="SelectionLength_Clicked"
                                        Grid.Row="1"
                                        Grid.Column="0"/>
                     <local:UITestEntry x:Name="CursorPositionEntry"
                                        Text="{Binding CursorPosition, x:DataType={x:Null}}"
                                        AutomationId="CursorPositionEntry"
                                        IsCursorVisible="False"
                                        Grid.Row="1"
                                        Grid.Column="1"/>
              </Grid>

              <Button Text="Update Cursor Selection"
                      FontSize="11"
                      Clicked="OnUpdateCursorAndSelectionClicked"
                      AutomationId="UpdateCursorAndSelectionButton"/>

              <Label Text="Events:"
                     FontSize="11"/>
              <Label x:Name="TextChangedLabel"
                     Text="{Binding TextChangedText, x:DataType={x:Null}}"
                     AutomationId="TextChangedLabel"
                     FontSize="11"/>
              <Label x:Name="CompletedLabel"
                     Text="{Binding CompletedText, x:DataType={x:Null}}"
                     AutomationId="CompletedLabel"
                     FontSize="11"/>
              <Label x:Name="FocusedLabel"
                     Text="{Binding FocusedText, x:DataType={x:Null}}"
                     AutomationId="FocusedLabel"
                     FontSize="11"/>
              <Label x:Name="UnfocusedLabel"
                     Text="{Binding UnfocusedText, x:DataType={x:Null}}"
                     AutomationId="UnfocusedLabel"
                     FontSize="11"/>
       </VerticalStackLayout>
</ContentPage>