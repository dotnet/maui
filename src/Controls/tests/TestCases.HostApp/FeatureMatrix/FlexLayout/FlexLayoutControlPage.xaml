<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Maui.Controls.Sample"
             x:Class="Maui.Controls.Sample.FlexLayoutControlMainPage"
             x:DataType="local:FlexLayoutViewModel"
             Title="ControlPage">
       <ContentPage.ToolbarItems>
              <ToolbarItem Text="Options"
                           Clicked="NavigateToOptionsPage_Clicked"
                           AutomationId="Options"/>
       </ContentPage.ToolbarItems>

       <Grid RowDefinitions="*,Auto,Auto,Auto,Auto,Auto,Auto"
             ColumnDefinitions="*">
              <FlexLayout x:Name="MainFlexLayout"
                          AutomationId="FlexLayoutControl"
                          Grid.Row="0"
                          AlignContent="{Binding AlignContent}"
                          AlignItems="{Binding AlignItems}"
                          Direction="{Binding Direction}"
                          JustifyContent="{Binding JustifyContent}"
                          Wrap="{Binding Wrap}"
                          Position="{Binding Child1Position}"
                          BackgroundColor="LightGray"
                          Margin="0,10,0,10">
                     <Border AutomationId="Child1"
                             BackgroundColor="#4e79a7"
                             FlexLayout.AlignSelf="{Binding Child1AlignSelf}"
                             FlexLayout.Grow="{Binding Child1Grow}"
                             FlexLayout.Order="{Binding Child1Order}"
                             FlexLayout.Shrink="{Binding ChildShrink}"
                             FlexLayout.Basis="{Binding Child1Basis}"
                             WidthRequest="{Binding WidthRequest}"
                             HeightRequest="{Binding SpecificHeightRequest}"
                             StrokeThickness="0"
                             StrokeShape="RoundRectangle 8">
                            <Label AutomationId="Child1"
                                   Text="Child1"
                                   TextColor="White"
                                   FontSize="12"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                     </Border>
                     <Border AutomationId="Child2"
                             BackgroundColor="#59a14f"
                             FlexLayout.Shrink="{Binding ChildShrink}"
                             WidthRequest="{Binding WidthRequest}"
                             HeightRequest="{Binding HeightRequest}"
                             StrokeThickness="0"
                             StrokeShape="RoundRectangle 8">
                            <Label AutomationId="Child2"
                                   Text="Child2"
                                   TextColor="White"
                                   FontSize="12"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                     </Border>
                     <Border AutomationId="Child3"
                             BackgroundColor="#e15759"
                             FlexLayout.Shrink="{Binding ChildShrink}"
                             WidthRequest="{Binding WidthRequest}"
                             HeightRequest="{Binding SpecificHeightRequest}"
                             StrokeThickness="0"
                             StrokeShape="RoundRectangle 8">
                            <Label AutomationId="Child3"
                                   Text="Child3"
                                   TextColor="White"
                                   FontSize="12"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                     </Border>
                     <Border AutomationId="Child4"
                             BackgroundColor="#FFDA8D00"
                             WidthRequest="{Binding WidthRequest}"
                             HeightRequest="{Binding HeightRequest}"
                             StrokeThickness="0"
                             StrokeShape="RoundRectangle 8">
                            <Label AutomationId="Child4"
                                   Text="Child4"
                                   TextColor="White"
                                   FontSize="12"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                     </Border>
                     <Border AutomationId="Child5"
                             BackgroundColor="#FF009DC0"
                             WidthRequest="{Binding WidthRequest}"
                             HeightRequest="{Binding SpecificHeightRequest}"
                             StrokeThickness="0"
                             StrokeShape="RoundRectangle 8">
                            <Label AutomationId="Child5"
                                   Text="Child5"
                                   TextColor="White"
                                   FontSize="12"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                     </Border>
              </FlexLayout>

              <Grid Grid.Row="1"
                    RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto"
                    ColumnDefinitions="Auto,*"
                    ColumnSpacing="8"
                    RowSpacing="4"
                    Padding="10"
                    AutomationId="PropertyLabelsGrid">
                     <Label Grid.Row="0"
                            Text="AlignContent:"/>
                     <Label Grid.Row="0"
                            Grid.Column="1"
                            AutomationId="AlignContentLabel"
                            Text="{Binding AlignContent}"/>
                     <Label Grid.Row="1"
                            Text="AlignItems:"/>
                     <Label Grid.Row="1"
                            Grid.Column="1"
                            AutomationId="AlignItemsLabel"
                            Text="{Binding AlignItems}"/>
                     <Label Grid.Row="2"
                            Text="Direction:"/>
                     <Label Grid.Row="2"
                            Grid.Column="1"
                            AutomationId="DirectionLabel"
                            Text="{Binding Direction}"/>
                     <Label Grid.Row="3"
                            Text="JustifyContent:"/>
                     <Label Grid.Row="3"
                            Grid.Column="1"
                            AutomationId="JustifyContentLabel"
                            Text="{Binding JustifyContent}"/>
                     <Label Grid.Row="4"
                            Text="Wrap:"/>
                     <Label Grid.Row="4"
                            Grid.Column="1"
                            AutomationId="WrapLabel"
                            Text="{Binding Wrap}"/>
                     <Label Grid.Row="5"
                            Text="Child1AlignSelf:"/>
                     <Label Grid.Row="5"
                            Grid.Column="1"
                            AutomationId="Child1AlignSelfLabel"
                            Text="{Binding Child1AlignSelf}"/>
                     <Label Grid.Row="6"
                            Text="Child1Grow:"/>
                     <Label Grid.Row="6"
                            Grid.Column="1"
                            AutomationId="Child1GrowLabel"
                            Text="{Binding Child1Grow}"/>
                     <Label Grid.Row="7"
                            Text="Child1Order:"/>
                     <Label Grid.Row="7"
                            Grid.Column="1"
                            AutomationId="Child1OrderLabel"
                            Text="{Binding Child1Order}"/>
                     <Label Grid.Row="8"
                            Text="ChildShrink:"/>
                     <Label Grid.Row="8"
                            Grid.Column="1"
                            AutomationId="ChildShrinkLabel"
                            Text="{Binding ChildShrink}"/>
                     <Label Grid.Row="9"
                            Text="Child1Basis:"/>
                     <Label Grid.Row="9"
                            Grid.Column="1"
                            AutomationId="Child1BasisLabel"
                            Text="{Binding Child1BasisMode}"/>
                     <Label Grid.Row="10"
                            Text="Child1Position:"/>
                     <Label Grid.Row="10"
                            Grid.Column="1"
                            AutomationId="Child1PositionLabel"
                            Text="{Binding Child1Position}"/>
                     <Button Grid.Row="11"
                             AutomationId="AddChildrenButton"
                             Clicked="AddChildButton_Clicked"
                             Text="Add Children"/>
                     <Button Grid.Row="11"
                             Grid.Column="1"
                             AutomationId="RemoveChildrenButton"
                             Clicked="RemoveChildButton_Clicked"
                             Text="Remove Children"
                             HorizontalOptions="Start"
                             WidthRequest="200"/>
              </Grid>
       </Grid>
</ContentPage>
