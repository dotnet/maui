<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Maui.Controls.Sample"
             x:Class="Maui.Controls.Sample.DynamicGridLayoutControlPage"
             x:DataType="local:LayoutViewModel"
             Title="Dynamic Grid Layout">
    
    <VerticalStackLayout Padding="10" Spacing="10">
        
        <ScrollView x:Name="MyScrollView"
                    BackgroundColor="Lavender"
                    AutomationId="ScrollViewWithDynamicGridLayout">
            <Grid x:Name="DynamicGrid"
                  BackgroundColor="LightGray"
                  Padding="10"
                  RowSpacing="10"
                  ColumnSpacing="10"/>
        </ScrollView>

        <!-- Row/Column Selection -->
        <Label Text="Add By:" FontAttributes="Bold" />
        <HorizontalStackLayout Spacing="10">
            <RadioButton x:Name="AddByRowButton"
                         Content="Row"
                         IsChecked="True"
                         CheckedChanged="OnAddModeChanged"
                         AutomationId="RowButton"/>
            <RadioButton x:Name="AddByColumnButton"
                         Content="Column"
                         CheckedChanged="OnAddModeChanged"
                         AutomationId="ColumnButton"/>
        </HorizontalStackLayout>

        <!-- Buttons -->
        <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
            <Button Text="Add Child"
                    Clicked="OnAddChildClicked"
                    AutomationId="AddButton"/>
            <Button Text="Remove Child"
                    Clicked="OnRemoveChildClicked"
                    AutomationId="RemoveButton"/>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>