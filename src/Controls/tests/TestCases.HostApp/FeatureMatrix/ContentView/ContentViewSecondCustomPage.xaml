<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Maui.Controls.Sample"
             x:Class="Maui.Controls.Sample.ContentViewSecondCustomPage">
    <ContentView.Resources>
        <ResourceDictionary>
            <ControlTemplate x:Key="DefaultSecondTemplate">
                <Border BackgroundColor="{TemplateBinding FrameBackgroundColor}" Padding="20" HeightRequest="200">
                    <VerticalStackLayout>
                        <Label Text="{TemplateBinding SecondCustomViewTitle}" FontSize="24" FontAttributes="Bold" />
                        <Label Text="{TemplateBinding SecondCustomViewDescription}" FontSize="16" />
                    </VerticalStackLayout>
                </Border>
            </ControlTemplate>
            <ControlTemplate x:Key="AlternateSecondTemplate">
                <Border BackgroundColor="LightYellow" Stroke="Orange" StrokeThickness="6" HeightRequest="200">
                    <VerticalStackLayout>
                        <Label Text="{TemplateBinding SecondCustomViewTitle}" FontSize="24" FontAttributes="Bold" />
                        <Label Text="{TemplateBinding SecondCustomViewDescription}" FontSize="16" />
                        <Label Text="Second Control Template Applied" FontSize="14"/>
                    </VerticalStackLayout>
                </Border>
            </ControlTemplate>
        </ResourceDictionary>
    </ContentView.Resources>
    <ContentView.ControlTemplate>
        <StaticResource Key="DefaultSecondTemplate" />
    </ContentView.ControlTemplate>
</ContentView>
