<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.Controls.Sample.ClipControlMainPage"
             Title="ClipControlPage">

        <!-- Control Type Selection -->
        <VerticalStackLayout HorizontalOptions="Center"
                             VerticalOptions="Center"
                             Spacing="10">
                <Button Text="Border"
                        Clicked="OnBorderPageClicked"
                        AutomationId="BorderButton"/>
                <Button Text="BoxView"
                        Clicked="OnBoxViewPageClicked"
                        AutomationId="BoxViewButton"/>
                <Button Text="Button"
                        Clicked="OnButtonPageClicked"
                        AutomationId="ButtonId"/>
                <Button Text="Image"
                        Clicked="OnImagePageClicked"
                        AutomationId="ImageButton"/>
                <Button Text="Label"
                        Clicked="OnLabelPageClicked"
                        AutomationId="LabelButton"/>
        </VerticalStackLayout>
</ContentPage>