<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.Controls.Sample.ClipControlMainPage"
             Title="ClipControlPage">

        <!-- Control Type Selection -->
        <VerticalStackLayout Spacing="10">
                <Button Text="Border" Clicked="OnBorderPageClicked"/>
                <Button Text="BoxView" Clicked="OnBoxViewPageClicked"/>
                <Button Text="Button" Clicked="OnButtonPageClicked"/>
                <Button Text="Image" Clicked="OnImagePageClicked"/>
                <Button Text="Label" Clicked="OnLabelPageClicked"/>
        </VerticalStackLayout>
</ContentPage>