<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Maui.Controls.Sample"
             x:Class="Maui.Controls.Sample.ClipOptionsPage"
             Title="ClipFeature">
       <ContentPage.ToolbarItems>
              <ToolbarItem Text="Apply"
                           Clicked="ApplyButton_Clicked"
                           AutomationId="Apply"/>
       </ContentPage.ToolbarItems>
       <VerticalStackLayout Padding="10"
                            Spacing="4">

              <Label Text="Clip Geometry"
                     FontAttributes="Bold"
                     FontSize="14"/>
              <HorizontalStackLayout>
                     <RadioButton Content="None"
                                  IsChecked="True"
                                  GroupName="ClipGroup"
                                  CheckedChanged="ClipRadio_CheckedChanged"
                                  AutomationId="ClipNone"/>
                     <RadioButton Content="Rectangle"
                                  GroupName="ClipGroup"
                                  CheckedChanged="ClipRadio_CheckedChanged"
                                  AutomationId="RectangleGeometry"/>
                     <RadioButton Content="Ellipse"
                                  GroupName="ClipGroup"
                                  CheckedChanged="ClipRadio_CheckedChanged"
                                  AutomationId="EllipseGeometry"/>
                     <RadioButton Content="RoundRectangle"
                                  GroupName="ClipGroup"
                                  CheckedChanged="ClipRadio_CheckedChanged"
                                  AutomationId="RoundRectangleGeometry"/>
              </HorizontalStackLayout>
              <HorizontalStackLayout>
                     <RadioButton Content="GeometryGroup"
                                  GroupName="ClipGroup"
                                  CheckedChanged="ClipRadio_CheckedChanged"
                                  AutomationId="GeometryGroup"/>
              </HorizontalStackLayout>

              <Label Text="PathGeometry Segment: "
                     FontAttributes="Bold"
                     FontSize="14"/>
              <HorizontalStackLayout>
                     <RadioButton Content="Line"
                                  GroupName="ClipGroup"
                                  CheckedChanged="PathTypeRadio_CheckedChanged"
                                  AutomationId="LineSegment"/>
                     <RadioButton Content="Arc"
                                  GroupName="ClipGroup"
                                  CheckedChanged="PathTypeRadio_CheckedChanged"
                                  AutomationId="ArcSegment"/>
                     <RadioButton Content="Bezier"
                                  GroupName="ClipGroup"
                                  CheckedChanged="PathTypeRadio_CheckedChanged"
                                  AutomationId="BezierSegment"/>
                     <RadioButton Content="PolyQuadraticBezier"
                                  GroupName="ClipGroup"
                                  CheckedChanged="PathTypeRadio_CheckedChanged"
                                  AutomationId="PolyQuadraticBezierSegment"/>
              </HorizontalStackLayout>
              <HorizontalStackLayout>
                     <RadioButton Content="QuadraticBezier"
                                  GroupName="ClipGroup"
                                  CheckedChanged="PathTypeRadio_CheckedChanged"
                                  AutomationId="QuadraticBezierSegment"/>
                     <RadioButton Content="PolyLine"
                                  GroupName="ClipGroup"
                                  CheckedChanged="PathTypeRadio_CheckedChanged"
                                  AutomationId="PolyLineSegment"/>
                     <RadioButton Content="PolyBezier"
                                  GroupName="ClipGroup"
                                  CheckedChanged="PathTypeRadio_CheckedChanged"
                                  AutomationId="PolyBezierSegment"/>
              </HorizontalStackLayout>

              <Label FontAttributes="Bold"
                     Text="Stroke Shape"/>
              <HorizontalStackLayout>
                     <RadioButton x:Name="RoundRectangleShapeRadio"
                                  Content="RoundRectangle"
                                  GroupName="Shape"
                                  AutomationId="RoundRectangleShapeRadio"
                                  CheckedChanged="ShapeChanged"/>
                     <RadioButton x:Name="PolygonShapeRadio"
                                  Content="Polygon"
                                  GroupName="Shape"
                                  AutomationId="PolygonShapeRadio"
                                  CheckedChanged="ShapeChanged"/>
              </HorizontalStackLayout>

              <HorizontalStackLayout Spacing="2">
                     <HorizontalStackLayout>
                            <Label FontAttributes="Bold"
                                   Text="StrokeColor: "
                                   VerticalOptions="Center"/>
                            <Button x:Name="BlueColorButton"
                                    Text="Blue"
                                    TextColor="White"
                                    BackgroundColor="Blue"
                                    Clicked="OnStrokeColorClicked"
                                    AutomationId="BlueColorButton"/>
                            <Button x:Name="GreenColorButton"
                                    Text="Green"
                                    TextColor="White"
                                    BackgroundColor="Green"
                                    Clicked="OnStrokeColorClicked"
                                    AutomationId="GreenColorButton"/>
                     </HorizontalStackLayout>

                     <!-- BoxView -->
                     <HorizontalStackLayout>
                            <Label VerticalOptions="Center"
                                   FontAttributes="Bold"
                                   Text="BoxColor: "/>
                            <Button Text="Green"
                                    TextColor="White"
                                    BackgroundColor="Green"
                                    Clicked="OnBoxViewColorClicked"
                                    AutomationId="GreenColorButton"/>
                     </HorizontalStackLayout>
              </HorizontalStackLayout>

              <HorizontalStackLayout Spacing="5">
                     <HorizontalStackLayout>
                            <Label FontAttributes="Bold"
                                   Text="Shadow:"
                                   VerticalOptions="Center"/>
                            <RadioButton x:Name="ShadowFalseRadio"
                                         VerticalOptions="Center"
                                         AutomationId="ShadowTrueRadioButton"
                                         GroupName="Shadow"
                                         Content="True"
                                         CheckedChanged="OnShadowRadioButtonCheckedChanged"/>
                     </HorizontalStackLayout>
                     <HorizontalStackLayout>
                            <Label FontAttributes="Bold"
                                   VerticalOptions="Center"
                                   Text="StrokeThickness: "/>
                            <Entry x:Name="StrokeThicknessEntry"
                                   Text="5"
                                   TextChanged="OnStrokeThicknessChanged"
                                   AutomationId="StrokeThicknessEntry"/>
                     </HorizontalStackLayout>
                     <HorizontalStackLayout>
                            <Label FontAttributes="Bold"
                                   VerticalOptions="Center"
                                   Text="CornerRadius: "/>
                            <Entry x:Name="CornerRadiusEntry"
                                   Text="0"
                                   TextChanged="OnCornerRadiusChanged"
                                   AutomationId="CornerRadiusEntry"/>
                     </HorizontalStackLayout>
              </HorizontalStackLayout>

              <!-- Button -->
              <HorizontalStackLayout>
                     <Label Text="Text:"
                            VerticalOptions="Center"/>
                     <Entry Text="{Binding Text}"
                            AutomationId="TextEntry"
                            VerticalOptions="Center"/>
                     <Button Text="ImageSource"
                             Clicked="OnImageSourceClicked"/>
              </HorizontalStackLayout>

              <HorizontalStackLayout>
                <Label Text="FormattedText"
                       VerticalOptions="Center"/>
                <CheckBox x:Name="FormattedTextCheckBox"
                          CheckedChanged="OnFormattedTextChanged"
                          AutomationId="FormattedText"/>
            </HorizontalStackLayout>

            <VerticalStackLayout>
                <Label Text="FontSize"/>
                <Entry x:Name="FontSizeEntry"
                       Placeholder="e.g., 24"
                       TextChanged="OnFontSizeChanged"
                       AutomationId="FontSizeEntry"/>
            </VerticalStackLayout>
       </VerticalStackLayout>
</ContentPage>