<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Maui.Controls.Sample"
             x:Class="Maui.Controls.Sample.CollectionViewGroupingPage"
             Title="CollectionViewControlPage">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Options"
                     Clicked="NavigateToOptionsPage_Clicked"
                     AutomationId="Options"/>
    </ContentPage.ToolbarItems>

    <local:CollectionView2
        x:Name="collectionView"
        ItemsSource="{Binding ItemsSource, x:DataType={x:Null}}"
        Header="{Binding Header, x:DataType={x:Null}}"
        Footer="{Binding Footer, x:DataType={x:Null}}"
        GroupHeaderTemplate="{Binding GroupHeaderTemplate, x:DataType={x:Null}}"
        GroupFooterTemplate="{Binding GroupFooterTemplate, x:DataType={x:Null}}"
        ItemTemplate="{Binding ItemTemplate, x:DataType={x:Null}}"
        IsGrouped="{Binding IsGrouped, x:DataType={x:Null}}"
        CanMixGroups="{Binding CanMixGroups, x:DataType={x:Null}}"
        CanReorderItems="{Binding CanReorderItems, x:DataType={x:Null}}"
        ItemsLayout="{Binding ItemsLayout, x:DataType={x:Null}}"
        AutomationId="CollectionViewControl">
    </local:CollectionView2>

</ContentPage>