<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.Controls.Sample.ContentPageControlMainPage"
             xmlns:local="clr-namespace:Maui.Controls.Sample"
             x:DataType="local:ContentPageViewModel"
             Title="{Binding Title}"
             IconImageSource="{Binding IconImageSource}"
             Background="{Binding BackgroundImageSource}"
             IsBusy="{Binding IsBusy}"
             Padding="{Binding Padding}"
             HideSoftInputOnTapped="{Binding HideSoftInputOnTapped}"
             IsVisible="{Binding IsVisible}"
             FlowDirection="{Binding FlowDirection}">
       <ContentPage.ToolbarItems>
              <ToolbarItem
                     Text="ResetButton"
                     Clicked="ResetAll_Clicked"
                     AutomationId="ResetButton"/>
       </ContentPage.ToolbarItems>
       <Grid Padding="10"
             RowSpacing="8"
             ColumnSpacing="15">

              <Grid.RowDefinitions>
                     <RowDefinition Height="Auto"/>
                     <!-- Header -->
                     <RowDefinition Height="Auto"/>
                     <!-- Title -->
                     <RowDefinition Height="Auto"/>
                     <!-- IconImageSource -->
                     <RowDefinition Height="Auto"/>
                     <!-- Padding -->
                     <RowDefinition Height="Auto"/>
                     <!-- Background -->
                     <RowDefinition Height="Auto"/>
                     <!-- Content -->
                     <RowDefinition Height="Auto"/>
                     <!-- Shadow -->
                     <RowDefinition Height="Auto"/>
                     <!-- FlowDirection -->
                     <RowDefinition Height="Auto"/>
                     <!-- IsBusy -->
                     <RowDefinition Height="Auto"/>
                     <!-- IsVisible -->
                     <RowDefinition Height="Auto"/>
                     <!-- HideSoftInputOnTapped -->
                     <RowDefinition Height="Auto"/>
                     <!-- Keyboard Test -->
                     <RowDefinition Height="Auto"/>
                     <!-- Reset Button -->
              </Grid.RowDefinitions>

              <Grid.ColumnDefinitions>
                     <ColumnDefinition Width="Auto"/>
                     <!-- Labels -->
                     <ColumnDefinition Width="*"/>
                     <!-- Controls -->
              </Grid.ColumnDefinitions>

              <!-- IsBusy Property -->
              <Label Grid.Row="1"
                     Grid.Column="0"
                     Text="Is Busy:"
                     AutomationId="IsBusyLabel"
                     FontAttributes="Bold"
                     FontSize="16"
                     VerticalOptions="Center"/>
              <HorizontalStackLayout Grid.Row="1"
                                     Grid.Column="1"
                                     Spacing="10">
                     <CheckBox IsChecked="{Binding IsBusy}"
                               AutomationId="IsBusyCheckBox"
                               VerticalOptions="Center"/>
                     <Label Text="{Binding IsBusy, StringFormat='({0})'}"
                            FontSize="12"
                            VerticalOptions="Center"/>
              </HorizontalStackLayout>

              <!-- IsVisible Property -->
              <Label Grid.Row="2"
                     Grid.Column="0"
                     Text="Is Visible:"
                     FontAttributes="Bold"
                     FontSize="16"
                     VerticalOptions="Center"/>
              <HorizontalStackLayout Grid.Row="2"
                                     Grid.Column="1"
                                     Spacing="10">
                     <CheckBox IsChecked="{Binding IsVisible}"
                               AutomationId="VisibilityCheckBox"
                               VerticalOptions="Center"/>
                     <Label Text="{Binding IsVisible, StringFormat='({0})'}"
                            FontSize="12"
                            VerticalOptions="Center"/>
              </HorizontalStackLayout>

              <!-- HideSoftInputOnTapped Property -->
              <Label Grid.Row="3"
                     Grid.Column="0"
                     Text="Hide Soft Input:"
                     AutomationId="HideSoftInputLabel"
                     FontAttributes="Bold"
                     FontSize="16"
                     VerticalOptions="Center"/>
              <HorizontalStackLayout Grid.Row="3"
                                     Grid.Column="1"
                                     Spacing="10">
                     <CheckBox IsChecked="{Binding HideSoftInputOnTapped}"
                               AutomationId="HideSoftInputCheckBox"
                               VerticalOptions="Center"/>
                     <Label Text="{Binding HideSoftInputOnTapped, StringFormat='({0})'}"
                            FontSize="12"
                            VerticalOptions="Center"/>
              </HorizontalStackLayout>

              <!-- Title Property -->
              <Label Grid.Row="4"
                     Grid.Column="0"
                     Text="Title:"
                     FontAttributes="Bold"
                     FontSize="16"
                     VerticalOptions="Center"/>
              <local:UITestEntry Grid.Row="4"
                     Grid.Column="1"
                     IsCursorVisible="False"
                     Text="{Binding Title}"
                     Placeholder="Enter page title"
                     AutomationId="TitleEntry"
                     FontSize="14"/>

              <!-- Keyboard Test -->
              <Label Grid.Row="5"
                     Grid.Column="0"
                     Text="Keyboard Test:"
                     AutomationId="KeyboardTestLabel"
                     FontAttributes="Bold"
                     FontSize="16"
                     VerticalOptions="Center"/>
              <VerticalStackLayout Grid.Row="5"
                                   Grid.Column="1"
                                   Spacing="5">
                     <local:UITestEntry Text="{Binding KeyboardTestText}"
                            IsCursorVisible="False"
                            Placeholder="Type here to test keyboard behavior..."
                            AutomationId="TestEntry"
                            FontSize="12"/>
              </VerticalStackLayout>

              <!-- IconImageSource Property -->
              <Label Grid.Row="6"
                     Grid.Column="0"
                     Text="Icon Image:"
                     FontAttributes="Bold"
                     FontSize="16"
                     VerticalOptions="Center"/>
              <HorizontalStackLayout Grid.Row="6"
                                     Grid.Column="1"
                                     Spacing="10">
                     <Button Text="Set Icon"
                             Clicked="SetIcon_Clicked"
                             AutomationId="IconButton"
                             FontSize="12"/>
              </HorizontalStackLayout>

              <!-- Padding Property -->
              <Label Grid.Row="7"
                     Grid.Column="0"
                     Text="Padding:"
                     FontAttributes="Bold"
                     FontSize="16"
                     VerticalOptions="Center"/>
              <HorizontalStackLayout Grid.Row="7"
                                     Grid.Column="1"
                                     Spacing="10">
                     <Button Text="Toggle Padding"
                             Clicked="TogglePadding_Clicked"
                             AutomationId="PaddingButton"
                             FontSize="12"/>
              </HorizontalStackLayout>

              <!-- Background Property -->
              <Label Grid.Row="8"
                     Grid.Column="0"
                     Text="Background:"
                     FontAttributes="Bold"
                     FontSize="16"
                     VerticalOptions="Center"/>
              <HorizontalStackLayout Grid.Row="8"
                                     Grid.Column="1"
                                     Spacing="10">
                     <Button Text="Set Gradient"
                             Clicked="SetGradientBackground_Clicked"
                             AutomationId="BackgroundButton"
                             FontSize="12"/>
              </HorizontalStackLayout>

              <!-- Content Property -->
              <Label Grid.Row="9"
                     Grid.Column="0"
                     Text="Content:"
                     FontAttributes="Bold"
                     FontSize="16"
                     VerticalOptions="Center"/>
              <Button Grid.Row="9"
                      Grid.Column="1"
                      Text="Change Content"
                      Clicked="ChangeContent_Clicked"
                      AutomationId="ContentButton"
                      FontSize="12"
                      HorizontalOptions="Start"/>

              <!-- FlowDirection Property -->
              <Label Grid.Row="10"
                     Grid.Column="0"
                     Text="Flow Direction:"
                     FontAttributes="Bold"
                     FontSize="16"
                     VerticalOptions="Center"/>
              <HorizontalStackLayout Grid.Row="10"
                                     Grid.Column="1"
                                     Spacing="10">
                     <Button Text="Toggle RTL/LTR"
                             Clicked="ToggleFlowDirection_Clicked"
                             AutomationId="FlowDirectionButton"
                             FontSize="12"/>
                     <Label Text="{Binding FlowDirection, StringFormat='({0})'}"
                            FontSize="12"
                            VerticalOptions="Center"/>
              </HorizontalStackLayout>
       </Grid>
</ContentPage>