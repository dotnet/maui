<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Maui.Controls.Sample"
             x:Class="Maui.Controls.Sample.ShellFlyoutOptionsPage"
             x:DataType="local:ShellViewModel"
             Title="Shell Options">
        <ContentPage.ToolbarItems>
                <ToolbarItem Text="Apply"
                             Clicked="OnApplyClicked"
                             AutomationId="Apply"/>
        </ContentPage.ToolbarItems>

        <VerticalStackLayout Padding="10,0,0,0">
                <Label Text="Flyout Behavior"
                       FontAttributes="Bold"
                       TextColor="Black"
                       FontSize="10"/>
                <HorizontalStackLayout>
                        <RadioButton GroupName="FlyoutBehavior"
                                     Content="Disabled"
                                     FontSize="10"
                                     AutomationId="FlyoutBehaviorDisabled"
                                     CheckedChanged="OnFlyoutBehaviorChanged"/>
                        <RadioButton GroupName="FlyoutBehavior"
                                     Content="Flyout"
                                     FontSize="10"
                                     IsChecked="True"
                                     AutomationId="FlyoutBehaviorFlyout"
                                     CheckedChanged="OnFlyoutBehaviorChanged"/>
                        <RadioButton GroupName="FlyoutBehavior"
                                     Content="Locked"
                                     FontSize="10"
                                     AutomationId="FlyoutBehaviorLocked"
                                     CheckedChanged="OnFlyoutBehaviorChanged"/>
                </HorizontalStackLayout>
                <Label Text="Flyout Header Behavior"
                       FontAttributes="Bold"
                       TextColor="Black"
                       FontSize="10"/>
                <HorizontalStackLayout>
                        <RadioButton GroupName="FlyoutHeaderBehavior"
                                     Content="Default"
                                     FontSize="10"
                                     IsChecked="True"
                                     AutomationId="FlyoutHeaderBehaviorDefault"
                                     CheckedChanged="OnFlyoutHeaderBehaviorChanged"/>
                        <RadioButton GroupName="FlyoutHeaderBehavior"
                                     Content="Fixed"
                                     FontSize="10"
                                     AutomationId="FlyoutHeaderBehaviorFixed"
                                     CheckedChanged="OnFlyoutHeaderBehaviorChanged"/>
                        <RadioButton GroupName="FlyoutHeaderBehavior"
                                     Content="Scroll"
                                     FontSize="10"
                                     AutomationId="FlyoutHeaderBehaviorScroll"
                                     CheckedChanged="OnFlyoutHeaderBehaviorChanged"/>
                        <RadioButton GroupName="FlyoutHeaderBehavior"
                                     Content="CollapseOnScroll"
                                     FontSize="10"
                                     AutomationId="FlyoutHeaderBehaviorCollapseOnScroll"
                                     CheckedChanged="OnFlyoutHeaderBehaviorChanged"/>
                </HorizontalStackLayout>
                <Grid ColumnDefinitions="*,*"
                      ColumnSpacing="10">
                        <VerticalStackLayout Grid.Column="0">
                                <Label Text="Width:"
                                       TextColor="Black"
                                       FontAttributes="Bold"
                                       FontSize="10"/>
                                <Entry Placeholder="Enter width (-1 for default)"
                                       Text="{Binding FlyoutWidth}"
                                       AutomationId="FlyoutWidthEntry"
                                       TextChanged="OnFlyoutWidthChanged"/>
                        </VerticalStackLayout>
                        <VerticalStackLayout Grid.Column="1">
                                <Label Text="Height:"
                                       TextColor="Black"
                                       FontAttributes="Bold"
                                       FontSize="10"/>
                                <Entry Placeholder="Enter height (-1 for default)"
                                       Text="{Binding FlyoutHeight}"
                                       AutomationId="FlyoutHeightEntry"
                                       TextChanged="OnFlyoutHeightChanged"/>
                        </VerticalStackLayout>
                </Grid>
                <Label Text="Flyout Header:"
                       FontAttributes="Bold"
                       TextColor="Black"
                       FontSize="10"/>
                <HorizontalStackLayout>
                        <RadioButton GroupName="FlyoutHeader"
                                     Content="None"
                                     FontSize="10"
                                     IsChecked="True"
                                     AutomationId="FlyoutHeaderNone"
                                     CheckedChanged="OnFlyoutHeaderChanged"/>
                        <RadioButton GroupName="FlyoutHeader"
                                     Content="Header"
                                     FontSize="10"
                                     AutomationId="FlyoutHeader"
                                     CheckedChanged="OnFlyoutHeaderChanged"/>
                        <RadioButton GroupName="FlyoutHeader"
                                     FontSize="10"
                                     Content="HeaderTemplate"
                                     AutomationId="FlyoutHeaderTemplate"
                                     CheckedChanged="OnFlyoutHeaderChanged"/>
                </HorizontalStackLayout>
                <Label Text="Flyout Footer:"
                       FontAttributes="Bold"
                       TextColor="Black"
                       FontSize="10"/>
                <HorizontalStackLayout Spacing="10">
                        <RadioButton GroupName="FlyoutFooter"
                                     Content="None"
                                     FontSize="10"
                                     IsChecked="True"
                                     AutomationId="FlyoutFooterNone"
                                     CheckedChanged="OnFlyoutFooterChanged"/>
                        <RadioButton GroupName="FlyoutFooter"
                                     Content="Footer"
                                     FontSize="10"
                                     AutomationId="FlyoutFooter"
                                     CheckedChanged="OnFlyoutFooterChanged"/>
                        <RadioButton GroupName="FlyoutFooter"
                                     Content="FooterTemplate"
                                     FontSize="10"
                                     AutomationId="FlyoutFooterTemplate"
                                     CheckedChanged="OnFlyoutFooterChanged"/>
                </HorizontalStackLayout>
                <Grid ColumnDefinitions="*,*"
                                ColumnSpacing="60">
                        <VerticalStackLayout Grid.Column="0">
                                <Label Text="Flyout Display Options:"
                                       FontSize="10"
                                       TextColor="Black"
                                       FontAttributes="Bold"/>
                                <HorizontalStackLayout Spacing="2">
                                        <RadioButton GroupName="DisplayOption"
                                                     Content="AsSingleItem"
                                                     FontSize="10"
                                                     IsChecked="True"
                                                     AutomationId="FlyoutDisplayOptionsAsSingleItem"
                                                     CheckedChanged="OnDisplayOptionChanged"/>
                                        <RadioButton GroupName="DisplayOption"
                                                     FontSize="10"
                                                     Content="AsMultipleItems"
                                                     AutomationId="FlyoutDisplayOptionsAsMultipleItems"
                                                     CheckedChanged="OnDisplayOptionChanged"/>
                                </HorizontalStackLayout>

                        </VerticalStackLayout>

                        <VerticalStackLayout Grid.Column="1">
                                <Label Text="FlyoutIcon"
                                       FontAttributes="Bold"
                                       TextColor="Black"
                                       FontSize="10"/>
                                <HorizontalStackLayout Spacing="2">
                                        <RadioButton GroupName="FlyoutIcon"
                                                     Content="None"
                                                     FontSize="10"
                                                     AutomationId="FlyoutIconNone"
                                                     CheckedChanged="OnFlyoutIconChanged"/>
                                        <RadioButton GroupName="FlyoutIcon"
                                                     Content="coffee"
                                                     FontSize="10"
                                                     AutomationId="FlyoutIconCoffee"
                                                     CheckedChanged="OnFlyoutIconChanged"/>
                                </HorizontalStackLayout>

                        </VerticalStackLayout>
                </Grid>
                <Label Text="FlyoutBackgroundImageAspect:"
                       FontSize="10"
                       TextColor="Black"
                       FontAttributes="Bold"/>
                <HorizontalStackLayout>
                        <RadioButton GroupName="BackgroundAspect"
                                     Content="AspectFill"
                                     IsChecked="True"
                                     FontSize="10"
                                     AutomationId="FlyoutBackgroundImageAspectFill"
                                     CheckedChanged="OnFlyoutBackgroundImageAspectChanged"/>
                        <RadioButton GroupName="BackgroundAspect"
                                     Content="AspectFit"
                                     FontSize="10"
                                     AutomationId="FlyoutBackgroundImageAspectFit"
                                     CheckedChanged="OnFlyoutBackgroundImageAspectChanged"/>
                        <RadioButton GroupName="BackgroundAspect"
                                     Content="Fill"
                                     FontSize="10"
                                     AutomationId="FlyoutBackgroundImageFill"
                                     CheckedChanged="OnFlyoutBackgroundImageAspectChanged"/>
                </HorizontalStackLayout>
                <Label Text="FlyoutVerticalScrollMode:"
                       FontSize="10"
                       TextColor="Black"
                       FontAttributes="Bold"/>
                <HorizontalStackLayout>
                        <RadioButton GroupName="ScrollMode"
                                     Content="Auto"
                                     FontSize="10"
                                     IsChecked="True"
                                     AutomationId="FlyoutVerticalScrollModeAuto"
                                     CheckedChanged="OnFlyoutScrollModeChanged"/>
                        <RadioButton GroupName="ScrollMode"
                                     Content="Enabled"
                                     FontSize="10"
                                     AutomationId="FlyoutVerticalScrollModeEnabled"
                                     CheckedChanged="OnFlyoutScrollModeChanged"/>
                        <RadioButton GroupName="ScrollMode"
                                     Content="Disabled"
                                     FontSize="10"
                                     AutomationId="FlyoutVerticalScrollModeDisabled"
                                     CheckedChanged="OnFlyoutScrollModeChanged"/>
                </HorizontalStackLayout>
                <Grid ColumnDefinitions="*,*">

                        <VerticalStackLayout Grid.Column="0">
                                <Label Text="Backdrop:"
                                       TextColor="Black"
                                       FontAttributes="Bold"
                                       FontSize="10"/>
                                <HorizontalStackLayout>
                                        <RadioButton GroupName="Backdrop"
                                                     Content="None"
                                                     FontSize="10"
                                                     IsChecked="True"
                                                     AutomationId="FlyoutBackdropNone"
                                                     CheckedChanged="OnBackdropChanged"/>
                                        <RadioButton GroupName="Backdrop"
                                                     Content="Gradient"
                                                     FontSize="10"
                                                     AutomationId="FlyoutBackdropGradient"
                                                     CheckedChanged="OnBackdropChanged"/>
                                </HorizontalStackLayout>
                        </VerticalStackLayout>
                        <VerticalStackLayout Grid.Column="1">
                                <Label Text="BackgroundImage:"
                                       FontAttributes="Bold"
                                       TextColor="Black"
                                       HorizontalOptions="Center"
                                       FontSize="10"/>
                                <HorizontalStackLayout Spacing="2">
                                        <RadioButton GroupName="BackgroundImage"
                                                     Content="None"
                                                     IsChecked="True"
                                                     FontSize="10"
                                                     AutomationId="FlyoutBackgroundNoneImage"
                                                     CheckedChanged="OnBackgroundImageChanged"/>
                                        <RadioButton GroupName="BackgroundImage"
                                                     Content="Image"
                                                     FontSize="10"
                                                     AutomationId="FlyoutBackgroundDotnetImage"
                                                     CheckedChanged="OnBackgroundImageChanged"/>
                                </HorizontalStackLayout>
                        </VerticalStackLayout>
                </Grid>
                <Grid ColumnDefinitions="2*,2*,2*">
                        <VerticalStackLayout Grid.Column="0">
                                <Label Text="Flow Direction"
                                       FontAttributes="Bold"
                                       TextColor="Black"
                                       FontSize="10"
                                       AutomationId="FlowDirectionLabel"/>
                                <HorizontalStackLayout>
                                        <RadioButton x:Name="FlowDirectionLTR"
                                                     AutomationId="FlowDirectionLTR"
                                                     GroupName="FlowDirection"
                                                     Content="LTR"
                                                     IsChecked="True"
                                                     FontSize="10"
                                                     CheckedChanged="OnFlowDirectionChanged"/>
                                        <RadioButton x:Name="FlowDirectionRTL"
                                                     AutomationId="FlowDirectionRTL"
                                                     GroupName="FlowDirection"
                                                     Content="RTL"
                                                     FontSize="10"
                                                     CheckedChanged="OnFlowDirectionChanged"/>
                                </HorizontalStackLayout>
                        </VerticalStackLayout>
                        <VerticalStackLayout Grid.Column="1">
                                <Label Text="IsEnabled"
                                       FontAttributes="Bold"
                                       TextColor="Black"
                                       FontSize="10"
                                       AutomationId="IsEnabledLabel"/>
                                <HorizontalStackLayout>
                                        <RadioButton Content="True"
                                                     IsChecked="True"
                                                     GroupName="IsEnabledGroup"
                                                     FontSize="10"
                                                     CheckedChanged="IsEnabledRadio_CheckedChanged"
                                                     AutomationId="IsEnabledTrue"/>
                                        <RadioButton Content="False"
                                                     GroupName="IsEnabledGroup"
                                                     FontSize="10"
                                                     CheckedChanged="IsEnabledRadio_CheckedChanged"
                                                     AutomationId="IsEnabledFalse"/>
                                </HorizontalStackLayout>
                        </VerticalStackLayout>
                        <VerticalStackLayout Grid.Column="2">
                                <Label Text="BackgroundColor:"
                                       TextColor="Black"
                                       FontAttributes="Bold"
                                       FontSize="10"/>
                                <HorizontalStackLayout Spacing="5">
                                        <RadioButton GroupName="BackgroundColor"
                                                     Content="Blue"
                                                     FontSize="10"
                                                     AutomationId="FlyoutBackgroundColorBlue"
                                                     CheckedChanged="OnBackgroundColorChanged"/>
                                </HorizontalStackLayout>
                        </VerticalStackLayout>
                </Grid>
                <Grid ColumnDefinitions="*,*">
                        <VerticalStackLayout Grid.Column="0">
                                <Label Text="Items Visible:"
                                       TextColor="Black"
                                       FontAttributes="Bold"
                                       FontSize="10"/>
                                <HorizontalStackLayout Spacing="10">
                                        <RadioButton GroupName="FlyoutItemVisible"
                                                     Content="True"
                                                     FontSize="10"
                                                     IsChecked="True"
                                                     AutomationId="FlyoutItemVisibilityTrue"
                                                     CheckedChanged="OnFlyoutItemVisibilityChanged"/>
                                        <RadioButton GroupName="FlyoutItemVisible"
                                                     Content="False"
                                                     FontSize="10"
                                                     AutomationId="FlyoutItemVisibilityFalse"
                                                     CheckedChanged="OnFlyoutItemVisibilityChanged"/>
                                </HorizontalStackLayout>
                        </VerticalStackLayout>
                        <VerticalStackLayout Grid.Column="1">
                                <Label Text="FlyoutIsPresented:"
                                       TextColor="Black"
                                       FontAttributes="Bold"
                                       FontSize="10"/>
                                <HorizontalStackLayout Spacing="10">
                                        <RadioButton Content="True"
                                                     GroupName="IsPresentedGroup"
                                                     FontSize="10"
                                                     CheckedChanged="IsPresentedRadio_CheckedChanged"
                                                     AutomationId="IsPresentedTrue"/>
                                        <RadioButton Content="False"
                                                     IsChecked="True"
                                                     FontSize="10"
                                                     GroupName="IsPresentedGroup"
                                                     CheckedChanged="IsPresentedRadio_CheckedChanged"
                                                     AutomationId="IsPresentedFalse"/>
                                </HorizontalStackLayout>
                        </VerticalStackLayout>
                </Grid>
                <Label Text="Select Flyout Template"
                       FontSize="10"
                       TextColor="Black"
                       FontAttributes="Bold"/>
                <VerticalStackLayout Spacing="5">
                        <HorizontalStackLayout Spacing="10">
                                <RadioButton GroupName="FlyoutTemplate"
                                             Content="FlyoutContent"
                                             FontSize="10"
                                             AutomationId="FlyoutTemplateFlyoutContent"
                                             CheckedChanged="OnFlyoutTemplateChanged"/>
                                <RadioButton GroupName="FlyoutTemplate"
                                             Content="FlyoutContentTemplate"
                                             FontSize="10"
                                             AutomationId="FlyoutTemplateFlyoutContentTemplate"
                                             CheckedChanged="OnFlyoutTemplateChanged"/>
                        </HorizontalStackLayout>
                </VerticalStackLayout>
        </VerticalStackLayout>
</ContentPage>