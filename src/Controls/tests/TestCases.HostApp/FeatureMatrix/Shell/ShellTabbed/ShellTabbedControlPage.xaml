<?xml version="1.0" encoding="utf-8" ?>
<Shell
       xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:Maui.Controls.Sample"
       x:Class="Maui.Controls.Sample.ShellTabbedControlPage"
       x:Name="MainShell"
       x:DataType="local:ShellViewModel"
       Title="Shell Tabbed Feature Matrix"
       AutomationId="ShellTabbedMatrix"
       TabBarBackgroundColor="{Binding TabBarBackgroundColor}"
       TabBarDisabledColor="{Binding TabBarDisabledColor}"
       TabBarForegroundColor="{Binding TabBarForegroundColor}"
       TabBarTitleColor="{Binding TabBarTitleColor}"
       TabBarUnselectedColor="{Binding TabBarUnselectedColor}"
       FlowDirection="{Binding FlowDirection,Mode=TwoWay}">
       <TabBar>
              <Tab Title="Tab1"
                   Icon="groceries.png">
                     <ShellContent x:Name="vegetablesItem"
                                   AutomationId="Vegetables"
                                   Title="Vegetables">
                            <ContentPage Title="Vegetables">
                                   <ContentPage.ToolbarItems>
                                          <ToolbarItem Text="Options"
                                                       Clicked="NavigateToOptionsPage_Clicked"
                                                       AutomationId="Options"/>
                                   </ContentPage.ToolbarItems>
                                   <VerticalStackLayout Padding="20">
                                          <Label Text="{Binding CurrentItemTitle, StringFormat='Current Item: {0}'}"
                                                 FontAttributes="Bold"
                                                 TextColor="Green"
                                                 AutomationId="VegetablesCurrentItemLabel"/>
                                          <Label Text="List of Vegetables:"
                                                 FontAttributes="Bold"/>
                                          <Label Text="Onion"/>
                                          <Label Text="Carrot"/>
                                          <Label Text="Potato"/>
                                          <Label Text="Cabbage"/>
                                          <Label Text="Broccoli"/>
                                          <Label Text="Spinach"/>
                                          <Label Text="Lettuce"/>
                                          <Label Text="Cauliflower"/>
                                          <Label Text="Peas"/>
                                          <Label Text="Corn"/>
                                   </VerticalStackLayout>
                            </ContentPage>
                     </ShellContent>
                     <ShellContent x:Name="fruitsItem"
                                   AutomationId="Fruits"
                                   Title="Fruits">
                            <ContentPage Title="Fruits">
                                   <VerticalStackLayout Padding="20">
                                          <Label Text="{Binding CurrentItemTitle, StringFormat='Current Item: {0}'}"
                                                 FontAttributes="Bold"
                                                 TextColor="Orange"
                                                 AutomationId="FruitsCurrentItemLabel"/>
                                          <Label Text="List of Fruits:"
                                                 FontAttributes="Bold"/>
                                          <Label Text="Apple"/>
                                          <Label Text="Banana"/>
                                          <Label Text="Orange"/>
                                          <Label Text="Grapes"/>
                                          <Label Text="Mango"/>
                                          <Label Text="Pineapple"/>
                                          <Label Text="Strawberry"/>
                                          <Label Text="Blueberry"/>
                                          <Label Text="Watermelon"/>
                                          <Label Text="Peach"/>
                                   </VerticalStackLayout>
                            </ContentPage>
                     </ShellContent>
              </Tab>
              <Tab Title="Tab2"
                   AutomationId="Tab2"
                   Icon="coffee.png">
                     <ShellContent x:Name="tab2Item"
                                   Shell.TabBarIsVisible="{Binding TabBarIsVisible, Mode=TwoWay}"
                                   Title="shellTab2">
                            <ContentPage Title="Tab2 Content">
                                   <VerticalStackLayout Padding="10">
                                          <Label Text="{Binding CurrentItemTitle, StringFormat='Current Item: {0}'}"
                                                 FontAttributes="Bold"
                                                 TextColor="Blue"
                                                 AutomationId="Tab2CurrentItemLabel"/>
                                          <Label Text="Welcome to Tab 2"
                                                 AutomationId="Tab2Label"/>
                                          <Button Text="Go to Tab1"
                                                  Clicked="OnGoToTab1Clicked"
                                                  AutomationId="GoToTab1Button"/>
                                   </VerticalStackLayout>
                            </ContentPage>
                     </ShellContent>
              </Tab>
              <Tab Title="Tab3"
                   AutomationId="Tab3"
                   IsVisible="{Binding IsVisible}"
                   Icon="seth.png">
                     <ShellContent x:Name="tab3Item"
                                   Title="ShellTab3">
                            <ContentPage Title="Tab3 Content">
                                   <VerticalStackLayout Padding="10">
                                          <Label Text="{Binding CurrentItemTitle, StringFormat='Current Item: {0}'}"
                                                 FontAttributes="Bold"
                                                 TextColor="Purple"
                                                 AutomationId="Tab3CurrentItemLabel"/>
                                          <Label Text="Welcome to Tab 3"
                                                 AutomationId="Tab3Label"/>
                                          <Button Text="Go to Tab1"
                                                  Clicked="OnGoToTab1Clicked"
                                                  AutomationId="GoToTab1Button"/>
                                   </VerticalStackLayout>
                            </ContentPage>
                     </ShellContent>
              </Tab>
              <Tab Title="Tab4"
                   AutomationId="Tab4"
                   IsEnabled="{Binding IsEnabled}"
                   Icon="bank.png">
                     <ShellContent x:Name="tab4Item"
                                   Title="ShellTab4">
                            <ContentPage Title="Page1">
                                   <VerticalStackLayout Padding="10">
                                          <Label Text="{Binding CurrentItemTitle, StringFormat='Current Item: {0}'}"
                                                 FontAttributes="Bold"
                                                 TextColor="Maroon"
                                                 AutomationId="Tab4CurrentItemLabel"/>
                                          <Label Text="Welcome to Tab 4"
                                                 AutomationId="Tab4Label"/>
                                          <Button Text="Go to Tab1"
                                                  Clicked="OnGoToTab1Clicked"
                                                  AutomationId="GoToTab1Button"/>
                                   </VerticalStackLayout>
                            </ContentPage>
                     </ShellContent>
              </Tab>
              <Tab Title="Tab5"
                   AutomationId="Tab5"
                   Icon="coffee.png">
                     <ShellContent x:Name="tab5Item"
                                   Title="ShellTab5">
                            <ContentPage Title="Page1">
                                   <VerticalStackLayout Padding="10">
                                          <Label Text="{Binding CurrentItemTitle, StringFormat='Current Item: {0}'}"
                                                 FontAttributes="Bold"
                                                 TextColor="Goldenrod"
                                                 AutomationId="Tab5CurrentItemLabel"/>
                                          <Label Text="Welcome to Tab 5"
                                                 AutomationId="Tab5Label"/>
                                          <Button Text="Go to Tab1"
                                                  Clicked="OnGoToTab1Clicked"
                                                  AutomationId="GoToTab1Button"/>
                                   </VerticalStackLayout>
                            </ContentPage>
                     </ShellContent>
              </Tab>
              <Tab Title="Tab6"
                   AutomationId="Tab6"
                   Icon="menu_icon.png">
                     <ShellContent x:Name="tab6Item"
                                   Title="ShellTab6">
                            <ContentPage Title="Page1">
                                   <VerticalStackLayout Padding="10">
                                          <Label Text="{Binding CurrentItemTitle, StringFormat='Current Item: {0}'}"
                                                 FontAttributes="Bold"
                                                 TextColor="DarkCyan"
                                                 AutomationId="Tab6CurrentItemLabel"/>
                                          <Label Text="Welcome to Tab 6"
                                                 AutomationId="Tab6Label"/>
                                          <Button Text="Go to Tab1"
                                                  Clicked="OnGoToTab1Clicked"
                                                  AutomationId="GoToTab1Button"/>
                                   </VerticalStackLayout>
                            </ContentPage>
                     </ShellContent>
              </Tab>
       </TabBar>
</Shell>
 