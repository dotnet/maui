<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Maui.Controls.Sample"
             x:Class="Maui.Controls.Sample.PickerControlMainPage"
             x:DataType="local:PickerViewModel">

       <ContentPage.ToolbarItems>
              <ToolbarItem Text="Options"
                           Clicked="NavigateToOptionsPage_Clicked"
                           AutomationId="Options"/>
       </ContentPage.ToolbarItems>

       <Grid Padding="20"
             RowDefinitions="*, Auto, Auto, Auto, Auto, Auto, Auto, Auto"
             ColumnDefinitions="0.5*, 0.5*"
             RowSpacing="20">
              <!-- Picker Control -->
              <Grid x:Name="PickerGrid"
                    Grid.Row="0"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Margin="0,200,0,50">
                     <Picker ItemsSource="{Binding ItemsSource, x:DataType={x:Null}}"
                             SelectedIndex="{Binding SelectedIndex, x:DataType={x:Null}}"
                             SelectedItem="{Binding SelectedItem, x:DataType={x:Null}}"
                             CharacterSpacing="{Binding CharacterSpacing, x:DataType={x:Null}}"
                             FlowDirection="{Binding FlowDirection, x:DataType={x:Null}}"
                             FontAttributes="{Binding FontAttributes, x:DataType={x:Null}}"
                             FontAutoScalingEnabled="{Binding FontAutoScalingEnabled, x:DataType={x:Null}}"
                             FontFamily="{Binding FontFamily, x:DataType={x:Null}}"
                             FontSize="{Binding FontSize, x:DataType={x:Null}}"
                             HorizontalTextAlignment="{Binding HorizontalTextAlignment, x:DataType={x:Null}}"
                             IsEnabled="{Binding IsEnabled, x:DataType={x:Null}}"
                             IsVisible="{Binding IsVisible, x:DataType={x:Null}}"
                             Shadow="{Binding Shadow, x:DataType={x:Null}}"
                             TextColor="{Binding TextColor, x:DataType={x:Null}}"
                             Title="{Binding Title, x:DataType={x:Null}}"
                             TitleColor="{Binding TitleColor, x:DataType={x:Null}}"
                             VerticalTextAlignment="{Binding VerticalTextAlignment, x:DataType={x:Null}}"
                             SelectedIndexChanged="Picker_SelectedIndexChanged"
                             HeightRequest="100"
                             AutomationId="Picker"/>
              </Grid>

              <!-- Selected Index -->
              <Label Grid.Row="1"
                     Grid.Column="0"
                     Text="Selected Index:"
                     FontSize="16"
                     HorizontalTextAlignment="Center"
                     Margin="0,0,0,0"/>
              <Label Grid.Row="1"
                     Grid.Column="1"
                     Text="{Binding SelectedIndex, x:DataType={x:Null}}"
                     FontSize="16"
                     HorizontalTextAlignment="Center"
                     AutomationId="SelectedIndexLabel"/>

              <!-- Selected Item -->
              <Label Grid.Row="2"
                     Grid.Column="0"
                     Text="Selected Item:"
                     FontSize="16"
                     HorizontalTextAlignment="Center"/>
              <Label Grid.Row="2"
                     Grid.Column="1"
                     Text="{Binding SelectedItem, x:DataType={x:Null}}"
                     FontSize="16"
                     HorizontalTextAlignment="Center"
                     AutomationId="SelectedItemLabel"/>

              <!-- Event Status -->
              <Label Grid.Row="3"
                     Grid.Column="0"
                     FontSize="16"
                     Text="SelectedIndexChanged Event:"
                     HorizontalTextAlignment="Center"/>
              <Label Grid.Row="3"
                     Grid.Column="1"
                     x:Name="SelectedIndexChangedStatusLabel"
                     FontSize="16"
                     HorizontalTextAlignment="Center"
                     AutomationId="SelectedIndexChangedStatusLabel"/>
       </Grid>
</ContentPage>
