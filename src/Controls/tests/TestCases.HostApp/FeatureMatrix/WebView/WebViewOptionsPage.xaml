<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Maui.Controls.Sample"
             x:Class="Maui.Controls.Sample.WebViewOptionsPage"
             Title="WebView Options">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Apply"
                     Clicked="ApplyButton_Clicked"
                     AutomationId="Apply"/>
    </ContentPage.ToolbarItems>
    <VerticalStackLayout Padding="10"
                         Spacing="10">
        <Label Text="Source:"
               FontSize="15"
               FontAttributes="Bold"/>
        <HorizontalStackLayout  Spacing="5">
            <Button x:Name="HtmlSourceButton"
                    AutomationId="HtmlSourceButton"
                    Text="HTML"
                    Clicked="OnHtmlSourceClicked"/>
            <Button x:Name="MicrosoftUrlButton"
                    AutomationId="MicrosoftUrlButton"
                    Text="Microsoft"
                    Clicked="OnMicrosoftUrlClicked"/>
            <Button x:Name="GithubUrlButton"
                    AutomationId="GithubUrlButton"
                    Text="Github"
                    Clicked="OnGithubUrlClicked"/>
        </HorizontalStackLayout>
        <Label Text="Cookie Management:"
               FontSize="15"
               FontAttributes="Bold"/>
        <HorizontalStackLayout
            Spacing="5">
            <Button Text="Add Test Cookie"
                    Clicked="AddTestCookie_Clicked"
                    AutomationId="AddTestCookieButton"/>
            <Button Text="Clear Cookies"
                    Clicked="ClearCookies_Clicked"
                    AutomationId="ClearCookiesButton"/>
        </HorizontalStackLayout>
        <Label Text="Navigation Testing:"
               FontSize="15"
               FontAttributes="Bold"/>
        <HorizontalStackLayout
            Spacing="2">
            <Button Text="Page 1"
                    Clicked="LoadPage1_Clicked"
                    AutomationId="LoadPage1Button"/>
            <Button Text="Page 2"
                    Clicked="LoadPage2_Clicked"
                    AutomationId="LoadPage2Button"/>
            <Button Text="Multiple Pages"
                    Clicked="LoadMultiplePages_Clicked"
                    AutomationId="LoadMultiplePagesButton"/>
        </HorizontalStackLayout>
        <Label Text="Is Visible"
               FontSize="16"
               FontAttributes="Bold"/>
        <HorizontalStackLayout>
            <RadioButton Content="True"
                         IsChecked="True"
                         GroupName="IsVisibleGroup"
                         CheckedChanged="IsVisibleRadio_CheckedChanged"
                         AutomationId="IsVisibleTrue"/>
            <RadioButton Content="False"
                         GroupName="IsVisibleGroup"
                         CheckedChanged="IsVisibleRadio_CheckedChanged"
                         AutomationId="IsVisibleFalse"/>
        </HorizontalStackLayout>
        <Label Text="Shadow"
               FontSize="16"
               FontAttributes="Bold"/>
        <HorizontalStackLayout>
            <RadioButton Content="False"
                         IsChecked="True"
                         GroupName="ShadowGroup"
                         CheckedChanged="ShadowRadio_CheckedChanged"
                         AutomationId="ShadowFalse"/>
            <RadioButton Content="True"
                         GroupName="ShadowGroup"
                         CheckedChanged="ShadowRadio_CheckedChanged"
                         AutomationId="ShadowTrue"/>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>