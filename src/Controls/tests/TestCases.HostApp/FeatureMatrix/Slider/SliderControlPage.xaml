<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Maui.Controls.Sample"
             x:Class="Maui.Controls.Sample.SliderControlMainPage"
             x:DataType="local:SliderViewModel"
             Title="SliderFeature">

  <ContentPage.ToolbarItems>
    <ToolbarItem Text="Options" Clicked="NavigateToOptionsPage_Clicked" AutomationId="Options"/>
  </ContentPage.ToolbarItems>

  <Grid Padding="20" RowDefinitions="Auto, Auto, Auto, Auto,Auto, Auto, Auto" ColumnDefinitions="0.5*, 0.5*" RowSpacing="10">
    <!-- Slider Control -->
    <Grid x:Name="SliderGrid" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2">
      <Slider Minimum="{Binding Minimum, x:DataType={x:Null}}"
            Maximum="{Binding Maximum, x:DataType={x:Null}}"
            Value="{Binding Value, x:DataType={x:Null}}"
            ThumbColor="{Binding ThumbColor, x:DataType={x:Null}}"
            MinimumTrackColor="{Binding MinTrackColor, x:DataType={x:Null}}"
            MaximumTrackColor="{Binding MaxTrackColor, x:DataType={x:Null}}"
            BackgroundColor="{Binding BackgroundColor, x:DataType={x:Null}}"
            IsVisible="{Binding IsVisible, x:DataType={x:Null}}"
            IsEnabled="{Binding IsEnabled, x:DataType={x:Null}}"
            FlowDirection="{Binding FlowDirection, x:DataType={x:Null}}"
            ThumbImageSource="{Binding ThumbImageSource, x:DataType={x:Null}}"
            DragStartedCommand="{Binding DragStartedCommand, x:DataType={x:Null}}"
            DragCompletedCommand="{Binding DragCompletedCommand, x:DataType={x:Null}}"
            Margin="0,100,0,100" AutomationId="SliderControl" />
    </Grid>

    <!-- Minimum Value -->
    <Label Grid.Row="1" Grid.Column="0" 
               Text="Minimum:" 
               FontSize="16" 
               VerticalTextAlignment="Start" 
               HorizontalTextAlignment="Start" 
               Margin="80,0,10,10" />
    <Label Grid.Row="1" Grid.Column="1" 
               Text="{Binding Minimum, StringFormat='{0:F2, x:DataType={x:Null}}'}" 
               FontSize="16" 
               VerticalTextAlignment="Start" 
               HorizontalTextAlignment="Start" AutomationId="MinimumValueLabel"/>

    <Label Grid.Row="2" Grid.Column="0" 
               Text="Maximum:" 
               FontSize="16" 
               VerticalTextAlignment="Start" 
               HorizontalTextAlignment="Start" 
               Margin="80,0,10,10" />
    <Label Grid.Row="2" Grid.Column="1" 
               Text="{Binding Maximum, StringFormat='{0:F2, x:DataType={x:Null}}'}" 
               FontSize="16" 
               VerticalTextAlignment="Start" 
               HorizontalTextAlignment="Start" AutomationId="MaximumValueLabel"/>
    <Label Grid.Row="3" Grid.Column="0" 
               Text="Value:" 
               FontSize="16" 
               VerticalTextAlignment="Start" 
               HorizontalTextAlignment="Start" 
               Margin="80,0,10,10" />
    <Label Grid.Row="3" Grid.Column="1" 
               Text="{Binding Value, StringFormat='{0:F2, x:DataType={x:Null}}'}" 
               FontSize="16" 
               VerticalTextAlignment="Start" 
               HorizontalTextAlignment="Start" AutomationId="ValueLabel"/>
    <Label Grid.Row="4" Grid.Column="0"  FontSize="16"
           Text="Triggered Events:" IsVisible ="{Binding IsEventStatusLabelVisible, x:DataType={x:Null}}"
           VerticalTextAlignment="Start" 
           HorizontalTextAlignment="Start" 
           Margin="80,0,10,10" />
    <Label Grid.Row="4" Grid.Column="1" Text="{Binding DragStartStatus, x:DataType={x:Null}}" FontSize="16" VerticalTextAlignment="End" 
      HorizontalTextAlignment="Start"  AutomationId="DragStartStatusLabel" Margin="0,0,10,10" />
    <Label Grid.Row="5" Grid.Column="1" Text="{Binding DragCompletedStatus, x:DataType={x:Null}}" VerticalTextAlignment="Start" 
HorizontalTextAlignment="Start" FontSize="16" AutomationId="DragCompletedStatusLabel" Margin="0,0,10,10" />

  </Grid>
</ContentPage>
