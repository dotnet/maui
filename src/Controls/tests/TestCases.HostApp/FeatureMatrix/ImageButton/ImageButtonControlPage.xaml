<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Maui.Controls.Sample"
             x:Class="Maui.Controls.Sample.ImageButtonControlMainPage"
             x:DataType="local:ImageButtonViewModel"
             Title="ImageButtonControlPage">
        <ContentPage.ToolbarItems>
                <ToolbarItem Text="Options"
                             Clicked="NavigateToOptionsPage_Clicked"
                             AutomationId="Options"/>
        </ContentPage.ToolbarItems>

        <Grid RowDefinitions="*,Auto,Auto,Auto,Auto"
              ColumnDefinitions="*" >

                <ImageButton x:Name="TestImageButton"
                             Source="{Binding Source, x:DataType={x:Null}}"
                             Aspect="{Binding Aspect, x:DataType={x:Null}}"
                             BorderColor="{Binding BorderColor, x:DataType={x:Null}}"
                             BorderWidth="{Binding BorderWidth, x:DataType={x:Null}}"
                             CornerRadius="{Binding CornerRadius, x:DataType={x:Null}}"
                             IsEnabled="{Binding IsEnabled, x:DataType={x:Null}}"
                             Command="{Binding ImageCommand, x:DataType={x:Null}}"
                             CommandParameter="{Binding CommandParameter, x:DataType={x:Null}}"
                             Clicked="OnImageButtonClicked"
                             Pressed="OnImageButtonPressed"
                             Released="OnImageButtonReleased"
                             Padding="{Binding Padding, x:DataType={x:Null}}"
                             IsVisible="{Binding IsVisible, x:DataType={x:Null}}"
                             Shadow="{Binding Shadow, x:DataType={x:Null}}"
                             FlowDirection="{Binding FlowDirection, x:DataType={x:Null}}"
                             WidthRequest="350"
                             HeightRequest="450"
                             AutomationId="ImageButtonControl"/>
                <Label Grid.Row="1"
                       Text="{Binding ClickTotal, StringFormat='ImageButton Clicked: {0, x:DataType={x:Null}}'}"
                       HorizontalOptions="Center"
                       FontSize="12"
                       IsVisible="{Binding IsButtonClicked, x:DataType={x:Null}}"/>
                <Label Grid.Row="2"
                       Text="{Binding PressedTotal, StringFormat='ImageButton Pressed: {0, x:DataType={x:Null}}'}"
                       HorizontalOptions="Center"
                       FontSize="12"
                       IsVisible="{Binding IsButtonClicked, x:DataType={x:Null}}"/>
                <Label Grid.Row="3"
                       Text="{Binding ReleasedTotal, StringFormat='ImageButton Released: {0, x:DataType={x:Null}}'}"
                       HorizontalOptions="Center"
                       FontSize="12"
                       IsVisible="{Binding IsButtonClicked, x:DataType={x:Null}}"/>
                <Label Grid.Row="4"
                       Text="{Binding CommandResult, x:DataType={x:Null}}"
                       HorizontalOptions="Center"
                       FontSize="12"
                       IsVisible="{Binding IsButtonClicked, x:DataType={x:Null}}"/>
        </Grid>

</ContentPage>