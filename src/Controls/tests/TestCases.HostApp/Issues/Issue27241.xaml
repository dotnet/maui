<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Maui.Controls.Sample"
    x:Class="Maui.Controls.Sample.Issues.Issue27241">
    <StackLayout>
        <local:CarouselView2
            HeightRequest="100"
            PeekAreaInsets="20"
            Loop="false">
            <local:CarouselView2.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>VerticalItem1</x:String>
                    <x:String>VerticalItem2</x:String>
                    <x:String>VerticalItem3</x:String>
                </x:Array>
            </local:CarouselView2.ItemsSource>
            <local:CarouselView2.ItemsLayout>
                <LinearItemsLayout Orientation="Vertical"/>
            </local:CarouselView2.ItemsLayout>
            <local:CarouselView2.ItemTemplate>
                <DataTemplate>
                    <Border
                        StrokeThickness="1"
                        Stroke="#FFABAB"
                        Padding="15"
                        VerticalOptions="Center"
                        HorizontalOptions="FillAndExpand">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0"
                                                 EndPoint="1,1">
                                <GradientStop Color="#FFDDC1"
                                              Offset="0.0"/>
                                <GradientStop Color="#FFABAB"
                                              Offset="1.0"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Label FontFamily="Regular"
                               FontSize="14"
                               Margin="6"
                               AutomationId="{Binding ., x:DataType={x:Null}}"
                               Text="{Binding ., x:DataType={x:Null}}"
                               TextColor="Black"
                               VerticalOptions="Start"
                               HorizontalOptions="Center"/>
                    </Border>
                </DataTemplate>
            </local:CarouselView2.ItemTemplate>
        </local:CarouselView2>
    </StackLayout>

</ContentPage>