<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.Controls.Sample.Issues.Issue10987">

  <VerticalStackLayout
    Spacing="25"
    VerticalOptions="Center">

    <Button AutomationId="button"
            Text="Update alignment"
            Clicked="UpdateButtonClicked"/>
    <Button AutomationId="resetButton"
            Text="Reset alignment"
            Clicked="ResetButtonClicked"/>

    <Editor x:Name="editor"
            AutomationId="MauiEditor"
            BackgroundColor="lightblue"
            Placeholder="placeholder text"
            HeightRequest="250"
            WidthRequest="220"/>


  </VerticalStackLayout>
</ContentPage>