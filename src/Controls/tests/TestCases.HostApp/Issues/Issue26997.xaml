<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 x:Class="Maui.Controls.Sample.Issues.Issue26997"
			 xmlns:local="clr-namespace:Maui.Controls.Sample"
			 xmlns:ns="clr-namespace:Maui.Controls.Sample.Issues">
	<Grid>
		<local:CollectionView2 ItemsSource="{Binding ImagesToDisplay, x:DataType={x:Null}}"
							   AutomationId="collectionView"
							   x:DataType="ns:Issue26997">
			<CollectionView.ItemTemplate>
				<DataTemplate x:DataType="x:String">
					<Image Source="{Binding ., x:DataType={x:Null}}"/>
				</DataTemplate>
			</CollectionView.ItemTemplate>
		</local:CollectionView2>
	</Grid>
</ContentPage>