<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.Controls.Sample.Issues.Issue31106"
             Title="Issue 31106">

    <VerticalStackLayout Padding="20"
            Spacing="10">
        <Label Text="Testing Issue #31106 - Picker closes with VoiceOver/Keyboard"
               FontSize="18"
               FontAttributes="Bold"
               AutomationId="TitleLabel"/>

        <Label Text="Instructions: Enable VoiceOver or use keyboard navigation (Tab key) to interact with the picker below."
               TextColor="Gray"
               Margin="0,0,0,10"/>

        <Picker x:Name="TestPicker"
                Title="Select an item"
                AutomationId="TestPicker"
                SemanticProperties.Hint="Picker for testing VoiceOver"
                SemanticProperties.Description="Select an option from the list">
        </Picker>

        <Button Text="Open Picker Programmatically"
                Clicked="OnOpenPickerClicked"
                AutomationId="OpenPickerButton"
                Margin="0,20,0,0"/>

        <Label x:Name="StatusLabel"
               Text="Status: No item selected"
               AutomationId="StatusLabel"
               FontAttributes="Bold"
               Margin="0,20,0,0"/>

        <Label x:Name="LogLabel"
               Text=""
               AutomationId="LogLabel"
               FontSize="12"
               TextColor="Blue"/>
    </VerticalStackLayout>
</ContentPage>
