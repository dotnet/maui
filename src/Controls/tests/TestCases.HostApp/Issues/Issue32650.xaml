<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.Controls.Sample.Issues.Issue32650"
             Title="Issue32650 - Media Picker Image Orientation">
	<VerticalStackLayout Spacing="20" Padding="20">
		<Label 
			Text="MediaPicker Image Orientation Test"
			FontSize="24"
			FontAttributes="Bold"
			HorizontalTextAlignment="Center"/>

		<Label 
			Text="This test verifies that images picked with MediaPicker maintain correct orientation when RotateImage=true and PreserveMetaData=true"
			FontSize="14"
			HorizontalTextAlignment="Center"/>

		<Button 
			x:Name="PickPhotoButton"
			Text="Pick Photo with Rotation"
			Clicked="OnPickPhotoClicked"
			Padding="20"/>

		<Button 
			x:Name="PickMultiplePhotosButton"
			Text="Pick Multiple Photos with Rotation"
			Clicked="OnPickMultiplePhotosClicked"
			Padding="20"/>

		<Button 
			x:Name="CapturePhotoButton"
			Text="Capture Photo with Rotation"
			Clicked="OnCapturePhotoClicked"
			Padding="20"/>

		<Label 
			x:Name="ResultLabel"
			Text="Result: Waiting for action"
			FontSize="12"
			HorizontalTextAlignment="Center"
			TextColor="Gray"/>

		<Image 
			x:Name="PickedImage"
			Aspect="AspectFit"
			HeightRequest="300"
			WidthRequest="300"/>
	</VerticalStackLayout>
</ContentPage>
