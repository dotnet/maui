<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.Controls.Sample.Issues.Issue19866"
             Title="Issue 19866 - iOS CollectionView ScrollsToTop">
    <StackLayout>
        <Label AutomationId="InstructionsLabel" 
               Text="iOS CollectionView with ScrollsToTop functionality enabled. Scroll down and tap the status bar to scroll back to top." 
               Padding="10" 
               BackgroundColor="LightYellow"
               FontSize="16" />
        
        <CollectionView x:Name="TestCollectionView" 
                        AutomationId="TestCollectionView"
                        ItemsSource="{Binding Items}"
                        BackgroundColor="LightGray">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="15" BackgroundColor="White" Margin="5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Label Grid.Row="0" 
                               Text="{Binding Title}" 
                               FontSize="18" 
                               FontAttributes="Bold" 
                               TextColor="Blue"
                               AutomationId="{Binding AutomationId}" />
                        <Label Grid.Row="1" Text="{Binding Description}" FontSize="14" TextColor="Gray" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>
</ContentPage>