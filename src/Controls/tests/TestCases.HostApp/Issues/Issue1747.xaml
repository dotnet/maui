<?xml version="1.0" encoding="UTF-8"?>
<controls:TestContentPage xmlns:controls="clr-namespace:Maui.Controls.Sample.Issues"
                          xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                          xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                          x:Class="Maui.Controls.Sample.Issues.Issue1747">
    <StackLayout>
        <Switch x:Name="ToggleSwitch"
                IsToggled="{Binding ShouldBeToggled, Mode=TwoWay}"
                IsEnabled="{Binding ShouldBeEnabled}" />
        <Button x:Name="ToggleButton"
                Text="Toggle Enabled"
                Clicked="Button_OnClick" />
    </StackLayout>
</controls:TestContentPage>
