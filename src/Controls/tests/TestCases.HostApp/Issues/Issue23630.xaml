<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.Controls.Sample.Issues.Issue23630">
    <ContentPage.Content>
        <Button Text="Clipped Button"
                AutomationId="visualElement"
                WidthRequest="100"
                HeightRequest="100"
                Background="Red">
            <Button.Clip>
                <EllipseGeometry Center="50,50" RadiusX="50" RadiusY="50"/>
            </Button.Clip>
            <Button.Shadow>
                <Shadow Brush="Black" Offset="10,10" Radius="20" Opacity="0.8"/>
            </Button.Shadow>
        </Button>
    </ContentPage.Content>
</ContentPage>