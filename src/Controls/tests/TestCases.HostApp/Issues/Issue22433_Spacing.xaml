<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.Controls.Sample.Issues.Issue22433_Spacing"
             Title="Issue22433_Spacing"
             Background="White">
    <ContentPage.Resources>
        <ResourceDictionary Source="../Resources/Styles/ButtonDefaultStyles.xaml" />
    </ContentPage.Resources>

    <!-- custom layout, custom spacing, default padding -->
    <VerticalStackLayout>
        <Label 
            Text="ContentLayout Spacing 20, default Padding"
            AutomationId="TestSpacingHeader"/>
        <HorizontalStackLayout>
            <Button 
                ImageSource="{StaticResource CircleIconAlt}"
                ContentLayout="Left,20"
                Text="Button" Style="{StaticResource PrimaryButtonOutlineIcon}"/>
            <Button 
                ImageSource="{StaticResource CircleIconAlt}"
                ContentLayout="Left,20"
                Text="Button" IsEnabled="False" Style="{StaticResource PrimaryButtonOutlineIcon}"/>
        </HorizontalStackLayout>

        <HorizontalStackLayout>
            <Button 
                ImageSource="{StaticResource CircleIconAlt}"
                ContentLayout="Right,20"
                Text="Button" Style="{StaticResource PrimaryButtonOutlineIcon}"/>
            <Button 
                ImageSource="{StaticResource CircleIconAlt}"
                ContentLayout="Right,20"
                Text="Button" IsEnabled="False" Style="{StaticResource PrimaryButtonOutlineIcon}"/>
        </HorizontalStackLayout>

        <HorizontalStackLayout>
            <Button 
                ImageSource="{StaticResource CircleIconAlt}"
                ContentLayout="Top,20"
                Text="Button" Style="{StaticResource PrimaryButtonOutlineIcon}"/>
            <Button 
                ImageSource="{StaticResource CircleIconAlt}"
                ContentLayout="Top,20"
                Text="Button" IsEnabled="False" Style="{StaticResource PrimaryButtonOutlineIcon}"/>
        </HorizontalStackLayout>

        <HorizontalStackLayout>
            <Button 
                ImageSource="{StaticResource CircleIconAlt}"
                ContentLayout="Bottom,20"
                Text="Button" Style="{StaticResource PrimaryButtonOutlineIcon}"/>
            <Button 
                ImageSource="{StaticResource CircleIconAlt}"
                ContentLayout="Bottom,20"
                Text="Button" IsEnabled="False" Style="{StaticResource PrimaryButtonOutlineIcon}"/>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>
