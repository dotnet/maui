<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.Controls.Sample.Issues.ModalFormSheetDismissalCancellation"
             Title="Modal FormSheet Dismissal Cancellation">
    
    <VerticalStackLayout Padding="20" Spacing="10">
        <Label 
            AutomationId="Instructions"
            Text="Tap 'Show Modal' to display a FormSheet modal. Try swiping down to dismiss. The first time should be prevented, showing an alert. The second time should allow dismissal."
            TextColor="{AppThemeBinding Light=Black, Dark=White}"/>
        
        <Button 
            AutomationId="ShowModalButton"
            Text="Show Modal"
            Clicked="OnShowModalClicked"/>
        
        <Label 
            AutomationId="StatusLabel"
            Text="Status: Ready"
            TextColor="{AppThemeBinding Light=Black, Dark=White}"/>
    </VerticalStackLayout>
</ContentPage>
