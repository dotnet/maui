<?xml version="1.0" encoding="UTF-8"?>
<Shell xmlns:controls="clr-namespace:Maui.Controls.Sample.Issues"
       xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       x:Class="Maui.Controls.Sample.Issues.Issue29558">
        <ShellContent
                Title="Home"
                Route="MainPage">
                <ContentPage>
                        <Shell.SearchHandler>
                                <SearchHandler x:Name="searchHandler"
                                               Placeholder="searchHandler"
                                               Keyboard="Plain"/>
                        </Shell.SearchHandler>
                        <StackLayout>
                                <Entry AutomationId="entry"
                                       x:Name="entry"/>
                                <Editor AutomationId="editor"
                                        x:Name="editor"/>
                                <SearchBar AutomationId="searchBar"
                                           x:Name="searchBar"/>
                                <Button Text="Unfocus"
                                        Clicked="UnfocusButton_Clicked"
                                        AutomationId="unfocusButton"/>
                        </StackLayout>
                </ContentPage>
        </ShellContent>
</Shell>
