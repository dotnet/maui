<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.Controls.Sample.Issues.Issue16203"
             Title="Issue16203">
    <VerticalStackLayout VerticalOptions="Center">
        <Button AutomationId="MauiButton" Text="Button" HeightRequest="100"
                Clicked="Button_Clicked">
            <Button.GestureRecognizers>
                <SwipeGestureRecognizer Direction="Left"
                                        Swiped="SwipeGestureRecognizer_Swiped"
                                        Threshold="5"/>
            </Button.GestureRecognizers>
        </Button>
        <Label AutomationId="ClickedLabel" x:Name="clickedLabel" />
        <Label AutomationId="SwipedLabel" x:Name="swipedLabel" />
    </VerticalStackLayout>
</ContentPage>