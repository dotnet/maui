<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.Controls.Sample.Issues.Issue22306_2"
             Title="Issue22306_2">
    <VerticalStackLayout >
        <Button
            Text="BorderWidth Changing"
            ImageSource="dotnet_bot.png"
            HorizontalOptions="Center"
            BackgroundColor="Green"
            BorderColor="Black"
            BorderWidth="0"
            x:Name="TextImageButton"
            AutomationId="TextImageButton"/>

        <Button
            ImageSource="dotnet_bot.png"
            HorizontalOptions="Center"
            BackgroundColor="Green"
            BorderColor="Black"
            BorderWidth="0"
            x:Name="ImageButton"
            AutomationId="ImageButton"/>

        <Button
            Text="BorderWidth Changing"
            HorizontalOptions="Center"
            BackgroundColor="Green"
            BorderColor="Black"
            BorderWidth="0"
            x:Name="TextButton"
            AutomationId="TextButton"/>

        <Button Text="Change BorderWidth" Clicked="Change_BorderWidth_Button_Clicked" AutomationId="Change_BorderWidth_Button"/>
    </VerticalStackLayout>
</ContentPage>
