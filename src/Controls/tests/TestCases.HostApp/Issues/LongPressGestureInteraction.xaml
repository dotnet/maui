<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.Controls.Sample.Issues.LongPressGestureInteraction"
             Title="LongPress Gesture Interaction Tests">
    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20">
            
            <!-- Test 1: LongPress + Tap -->
            <Label Text="Test 1: LongPress + Tap" FontAttributes="Bold" />
            <Frame AutomationId="TapAndLongPressFrame" 
                   BackgroundColor="LightBlue" 
                   HeightRequest="100">
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnTapped" />
                    <LongPressGestureRecognizer LongPressed="OnLongPressed" />
                </Frame.GestureRecognizers>
                <Label Text="Tap or Long Press Me" 
                       HorizontalOptions="Center" 
                       VerticalOptions="Center" />
            </Frame>
            <Label AutomationId="TapLabel" Text="Tap Count: 0" />
            <Label AutomationId="LongPressLabel" Text="Long Press Count: 0" />
            
            <!-- Test 2: LongPress + Swipe -->
            <Label Text="Test 2: LongPress + Swipe" FontAttributes="Bold" />
            <Frame AutomationId="SwipeAndLongPressFrame" 
                   BackgroundColor="LightGreen" 
                   HeightRequest="100">
                <Frame.GestureRecognizers>
                    <SwipeGestureRecognizer Direction="Left" Swiped="OnSwiped" />
                    <LongPressGestureRecognizer LongPressed="OnLongPressed2" />
                </Frame.GestureRecognizers>
                <Label Text="Swipe Left or Long Press" 
                       HorizontalOptions="Center" 
                       VerticalOptions="Center" />
            </Frame>
            <Label AutomationId="SwipeLabel" Text="Swipe Count: 0" />
            <Label AutomationId="LongPress2Label" Text="Long Press Count: 0" />
            
            <!-- Test 3: LongPress in ScrollView -->
            <Label Text="Test 3: LongPress in ScrollView" FontAttributes="Bold" />
            <ScrollView AutomationId="TestScrollView" HeightRequest="200" BackgroundColor="LightYellow">
                <VerticalStackLayout>
                    <Frame AutomationId="LongPressInScrollFrame" 
                           Margin="10" 
                           BackgroundColor="Orange" 
                           HeightRequest="100">
                        <Frame.GestureRecognizers>
                            <LongPressGestureRecognizer LongPressed="OnLongPressed3" />
                        </Frame.GestureRecognizers>
                        <Label Text="Long Press in ScrollView" 
                               HorizontalOptions="Center" 
                               VerticalOptions="Center" />
                    </Frame>
                    <BoxView HeightRequest="400" Color="Gray" />
                </VerticalStackLayout>
            </ScrollView>
            <Label AutomationId="LongPress3Label" Text="Long Press Count: 0" />
            
            <!-- Test 4: Multiple LongPress recognizers -->
            <Label Text="Test 4: Multiple LongPress" FontAttributes="Bold" />
            <HorizontalStackLayout Spacing="10">
                <Frame AutomationId="LongPress1" 
                       BackgroundColor="Pink" 
                       WidthRequest="150" 
                       HeightRequest="100">
                    <Frame.GestureRecognizers>
                        <LongPressGestureRecognizer LongPressed="OnLongPressed4" />
                    </Frame.GestureRecognizers>
                    <Label Text="Long Press 1" 
                           HorizontalOptions="Center" 
                           VerticalOptions="Center" />
                </Frame>
                <Frame AutomationId="LongPress2" 
                       BackgroundColor="LightCoral" 
                       WidthRequest="150" 
                       HeightRequest="100">
                    <Frame.GestureRecognizers>
                        <LongPressGestureRecognizer LongPressed="OnLongPressed5" />
                    </Frame.GestureRecognizers>
                    <Label Text="Long Press 2" 
                           HorizontalOptions="Center" 
                           VerticalOptions="Center" />
                </Frame>
            </HorizontalStackLayout>
            <Label AutomationId="LongPress4Label" Text="LongPress1 Count: 0" />
            <Label AutomationId="LongPress5Label" Text="LongPress2 Count: 0" />
            
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
