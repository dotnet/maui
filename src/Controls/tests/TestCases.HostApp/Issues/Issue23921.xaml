<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.Controls.Sample.Issues.Issue23921"
             Title="Issue23921">
    <VerticalStackLayout>
        <SwipeView x:Name="swipeOne"
                   AutomationId="swipeOne">
            <SwipeView.RightItems>
                <SwipeItem Text="Hi" />
            </SwipeView.RightItems>

            <Button x:Name="button"
                    AutomationId="buttonOne"
                    Text="tap me!"
                    Clicked="button_Clicked"/>
        </SwipeView>

      <SwipeView x:Name="swipeTwo"
                 AutomationId="swipeTwo">
        <SwipeView.RightItems>
          <SwipeItem Text="Hi" />
        </SwipeView.RightItems>

        <Button x:Name="buttonTwo"
                AutomationId="buttonTwo"
                Text="tap me!"
                Clicked="button_Clicked"/>
      </SwipeView>
  </VerticalStackLayout>
</ContentPage>