<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.Controls.Sample.Issues.Issue25385">
    <VerticalStackLayout>
        <Rectangle
            AutomationId="Rectangle"
            HeightRequest="50"
            WidthRequest="50"
            BackgroundColor="#FF0000">
            <Rectangle.Triggers>
                <DataTrigger TargetType="Rectangle"
                             Binding="{Binding IsActive}"
                             Value="True">
                    <Setter Property="BackgroundColor"
                            Value="#00FF00"/>
                </DataTrigger>
            </Rectangle.Triggers>
        </Rectangle>
        <Ellipse WidthRequest="50"
                 HeightRequest="50"
                 AutomationId="Ellipse"
                 BackgroundColor="#FF0000">
            <Ellipse.Triggers>
                <DataTrigger TargetType="Ellipse"
                             Binding="{Binding IsActive}"
                             Value="True">
                    <Setter Property="BackgroundColor"
                            Value="#00FF00"/>
                </DataTrigger>
            </Ellipse.Triggers>
        </Ellipse>
        <Button Text="Change color"
                AutomationId="Button"
                Command="{Binding ChangeColorCommand}"/> 
    </VerticalStackLayout>
</ContentPage>