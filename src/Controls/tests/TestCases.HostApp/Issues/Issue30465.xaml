<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="Maui.Controls.Sample.Issues.Issue30465"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Issue 30465">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <Label Grid.Row="0" Text="AspectFit Image from File Test" FontSize="18" FontAttributes="Bold" />
        
        <Image Grid.Row="1" 
               x:Name="TestImage"
               Aspect="AspectFit"
               BackgroundColor="LightGray"
               AutomationId="TestImage" />
        
        <Label Grid.Row="2" 
               x:Name="StatusLabel"
               Text="Click to load image from file"
               AutomationId="StatusLabel" />
    </Grid>
</ContentPage>