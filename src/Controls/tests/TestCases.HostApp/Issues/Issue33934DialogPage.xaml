<?xml version="1.0" encoding="utf-8"?>

<local:Issue33934BottomSheetDialog xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                                   xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                                   xmlns:local="clr-namespace:Maui.Controls.Sample.Issues"
                                   x:Class="Maui.Controls.Sample.Issues.Issue33934DialogPage"
                                   x:Name="DialogRoot"
                                   x:DataType="local:DialogViewModel"
                                   Title="Quick Actions">

    <VerticalStackLayout Spacing="16">

        <Label Text="Animation Iterations: 0"
               FontSize="14"
               IsVisible="False"
               TextColor="Red"
               AutomationId="IterationCountLabel"
               x:Name="IterationCountLabel"
               HorizontalTextAlignment="Center"/>

        <VerticalStackLayout BindableLayout.ItemsSource="{Binding QuickActionRows}"
                             Spacing="16">
            <BindableLayout.ItemTemplate>
                <DataTemplate x:DataType="local:ActionRowModel">
                    <FlexLayout BindableLayout.ItemsSource="{Binding AvailableQuickActions}">
                        <BindableLayout.ItemTemplate>
                            <DataTemplate x:DataType="local:ActionModel">
                                <Border StrokeThickness="0"
                                        BackgroundColor="LightGray"
                                        HorizontalOptions="Fill"
                                        VerticalOptions="Start"
                                        FlexLayout.Grow="1"
                                        Padding="4">

                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="8"/>
                                    </Border.StrokeShape>

                                    <Border.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding SelectCommand}"/>
                                    </Border.GestureRecognizers>

                                    <VerticalStackLayout HorizontalOptions="Center"
                                                         Spacing="8"
                                                         Padding="16">

                                        <Label Text="{Binding Icon}"
                                               FontSize="32"
                                               HorizontalOptions="Center"/>

                                        <Label Text="{Binding Title}"
                                               FontSize="14"
                                               HorizontalTextAlignment="Center"/>

                                    </VerticalStackLayout>
                                </Border>
                            </DataTemplate>
                        </BindableLayout.ItemTemplate>
                    </FlexLayout>
                </DataTemplate>
            </BindableLayout.ItemTemplate>
        </VerticalStackLayout>
    </VerticalStackLayout>

</local:Issue33934BottomSheetDialog>