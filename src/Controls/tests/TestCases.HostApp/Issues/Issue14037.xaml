<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Maui.Controls.Sample.Issues.Issue14037"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:Maui.Controls.Sample.Issues"
    Title="GitHub Issue 14037"
    >
    <Grid Margin="25" RowDefinitions="*,Auto,*">
        <Button
            AutomationId="LaunchActivityForResult"
            Clicked="LaunchActivityForResult_Clicked"
            Text="Launch Activity for Result"
            VerticalOptions="Center"
            />
        <Label
            Grid.Row="1"
            AutomationId="ResultLabel"
            HorizontalOptions="Center"
            Text="Result:"
            />
        <Border Grid.Row="2" Padding="0">
            <Editor
                x:Name="Result"
                AutoSize="TextChanges"
                AutomationId="ResultValue"
                IsReadOnly="True"
                />
        </Border>
    </Grid>
</ContentPage>