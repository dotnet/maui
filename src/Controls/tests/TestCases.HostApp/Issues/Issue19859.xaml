<?xml version="1.0" encoding="utf-8" ?>
<FlyoutPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            x:Class="Maui.Controls.Sample.Issues.Issue19859"
            Title="DemoFlyoutPage" 
            FlyoutLayoutBehavior="Default">

  <FlyoutPage.Flyout>
    <ContentPage Title="My App" BackgroundColor="DarkBlue">
      <VerticalStackLayout>
        <Label Text="This is FlyoutPage.Flyout"
                   FontAttributes="Bold"
                           FontSize="20"
                           TextColor="White"
                   HorizontalTextAlignment="Center"
                   Margin="20"/>

        <Button Clicked="Button_OnClicked" Text="Klik mij"/>

      </VerticalStackLayout>
    </ContentPage>
  </FlyoutPage.Flyout>

  <FlyoutPage.Detail>
    <NavigationPage BarBackgroundColor="Yellow" BarTextColor="Red" Title="1" x:Name="NavPage">
      <x:Arguments>
        <ContentPage BackgroundColor="DarkRed">
          <VerticalStackLayout>
            <Label Text="This is FlyoutPage.Detail"
                           FontAttributes="Bold"
                           FontSize="20"
                           TextColor="White"
                       HorizontalTextAlignment="Center"
                       Margin="20"/>

            <Button Clicked="Button_OnClicked" AutomationId="WaitForButtonControl" Text="Klik me" x:Name="Btn"/>
          </VerticalStackLayout>
        </ContentPage>
      </x:Arguments>
    </NavigationPage>
  </FlyoutPage.Detail>
  
</FlyoutPage>