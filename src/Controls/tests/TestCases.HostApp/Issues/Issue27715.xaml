<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.Controls.Sample.Issues.Issue27715">

    <ShellContent Title="Home">
        <ContentPage>
            <VerticalStackLayout IgnoreSafeArea="True" InputTransparent="False">
                <ScrollView InputTransparent="False">
                    <VerticalStackLayout InputTransparent="False"
                        Spacing="25"
                        Padding="30,0"
                        VerticalOptions="Center"
                        x:Name="layout">
                        <Image
                            Source="dotnet_bot.png"
                            HeightRequest="200"
                            HorizontalOptions="Center" />
                        <Label
                            AutomationId="WaitForStubControl"
                            Text="Hello, World!"
                            SemanticProperties.HeadingLevel="Level1"
                            FontSize="32"
                            HorizontalOptions="Center" />
                        <Label
                            Text="Welcome to .NET Multi-platform App UI"
                            FontSize="18"
                            HorizontalOptions="Center" />
                        <Button
                            x:Name="CounterBtn"
                            Text="Click me"
                            HorizontalOptions="Center" />
                    </VerticalStackLayout>
                </ScrollView>
                <Label Text="The content in the Scroll View Should Not Be Cut Off"></Label>
            </VerticalStackLayout>
        </ContentPage>
    </ShellContent>

</Shell>