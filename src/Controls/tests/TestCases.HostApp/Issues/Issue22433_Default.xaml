<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:local="clr-namespace:Maui.Controls.Sample.Issues"
             x:Class="Maui.Controls.Sample.Issues.Issue22433_Default"
             Title="Issue22433_Default"
             Background="White">
    <ContentPage.Resources>
        <ResourceDictionary Source="../Resources/Styles/ButtonDefaultStyles.xaml" />
    </ContentPage.Resources>

    <VerticalStackLayout
        Padding="16">
        <HorizontalStackLayout>
            <Button
                x:Name="NavigateBtnLayout"
                AutomationId="TestNavigateButtonLayout"
                Text="Go to layout test page"
                Clicked="NavigateBtnLayout_Clicked"/>
            <Button
                x:Name="NavigateBtnPadding"
                AutomationId="TestNavigateButtonPadding"
                Text="Go to padding test page"
                Clicked="NavigateBtnPadding_Clicked"/>
        </HorizontalStackLayout>

        <Label 
            Text="Primary filled"/>
        <HorizontalStackLayout>
            <Button 
                Text="Button"/>
            <Button 
                Text="Button" 
                IsEnabled="False"/>
        </HorizontalStackLayout>

        <Label 
            Text="Image and Text"/>
        <HorizontalStackLayout>
            <Button 
                ImageSource="{StaticResource CircleIcon}" 
                Text="Button"/>
            <Button 
                ImageSource="{StaticResource CircleIcon}" 
                Text="Button" 
                IsEnabled="False"/>
        </HorizontalStackLayout>

        <Label 
            Text="Icon as Text"/>
        <HorizontalStackLayout>
            <Button 
                FontFamily="OpenSansRegular"
                Text="&#x0489;"/>
            <Button 
                FontFamily="OpenSansRegular"
                Text="&#x0489;"
                IsEnabled="False"/>
        </HorizontalStackLayout>

        <Label 
            Text="Primary outline"/>
        <HorizontalStackLayout>
            <Button 
                Text="Button" 
                Style="{StaticResource PrimaryButtonOutline}"/>
            <Button 
                Text="Button" 
                IsEnabled="False" 
                Style="{StaticResource PrimaryButtonOutline}"/>
        </HorizontalStackLayout>

        <Label 
            Text="Default values" />
        <HorizontalStackLayout>
            <Button
                ImageSource="{StaticResource CircleIconAlt}" 
                Text="Button" 
                Style="{StaticResource PrimaryButtonOutlineIcon}"/>
            <Button
                ImageSource="{StaticResource CircleIconAlt}" 
                Text="Button" IsEnabled="False" 
                Style="{StaticResource PrimaryButtonOutlineIcon}"/>
        </HorizontalStackLayout>

        <HorizontalStackLayout>
            <Button 
                ImageSource="{StaticResource CircleIconAlt}"
                ContentLayout="Right"
                Text="Button" 
                Style="{StaticResource PrimaryButtonOutlineIcon}"/>
            <Button 
                ImageSource="{StaticResource CircleIconAlt}"
                ContentLayout="Right"
                Text="Button" 
                IsEnabled="False" 
                Style="{StaticResource PrimaryButtonOutlineIcon}"/>
        </HorizontalStackLayout>

        <HorizontalStackLayout>
            <Button 
                ImageSource="{StaticResource CircleIconAlt}"
                ContentLayout="Top"
                Text="Button" 
                Style="{StaticResource PrimaryButtonOutlineIcon}"/>
            <Button 
                ImageSource="{StaticResource CircleIconAlt}"
                ContentLayout="Top"
                Text="Button"
                IsEnabled="False" 
                Style="{StaticResource PrimaryButtonOutlineIcon}"/>
            <Button 
                ImageSource="{StaticResource CircleIconAlt}"
                ContentLayout="Bottom"
                Text="Button" 
                Style="{StaticResource PrimaryButtonOutlineIcon}"/>
            <Button 
                ImageSource="{StaticResource CircleIconAlt}"
                ContentLayout="Bottom"
                Text="Button" 
                IsEnabled="False" 
                Style="{StaticResource PrimaryButtonOutlineIcon}"/>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>
