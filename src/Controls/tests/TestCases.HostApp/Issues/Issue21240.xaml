<?xml version="1.0" encoding="utf-8" ?>
<FlyoutPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            x:Class="Maui.Controls.Sample.Issues.Issue21240"
            IsGestureEnabled="False">

    <FlyoutPage.Flyout>
        <ContentPage Title="Menu">
            <VerticalStackLayout Padding="20">
                <Label Text="Flyout Menu"
                       AutomationId="FlyoutLabel"
                       FontSize="20"
                       FontAttributes="Bold"
                       Margin="0,0,0,20"/>
            </VerticalStackLayout>
        </ContentPage>
    </FlyoutPage.Flyout>

    <FlyoutPage.Detail>
        <NavigationPage>
            <x:Arguments>
                <ContentPage Title="Detail Page">
                    <Label Text="FlyoutPage IsGestureEnabled Test"
                           AutomationId="TitleLabel"
                           FontSize="18"
                           FontAttributes="Bold"/>
                </ContentPage>
            </x:Arguments>
        </NavigationPage>
    </FlyoutPage.Detail>

</FlyoutPage>
