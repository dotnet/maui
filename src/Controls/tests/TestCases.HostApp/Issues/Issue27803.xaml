<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Controls.TestCases.HostApp.Issues.Issue27803"
             Title="Issue27803">
    <VerticalStackLayout VerticalOptions="Center"
                         HorizontalOptions="Center"
                         Spacing="20">
        <DatePicker 
            x:Name="datePicker"
            TextColor="{Binding DatePickerTextColor}"
            Date="{Binding WorkDate, Mode=TwoWay}" 
            MaximumDate="12/31/2029" MinimumDate="01/01/2022" 
            />
        <Label AutomationId="MauiLabel"
               x:Name="colorLabel" />
        <Button AutomationId="MauiButton"
                Text="Change Color"
                Clicked="Button_Clicked" />
    </VerticalStackLayout>
</ContentPage>