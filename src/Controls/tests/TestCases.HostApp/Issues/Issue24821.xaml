<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="Maui.Controls.Sample.Issues.Issue24821"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Issue 24821 - HybridWebView Source Property">
    <ScrollView>
        <VerticalStackLayout Spacing="10" Padding="20">
            <Label Text="HybridWebView Source Property Test" 
                   FontSize="18" 
                   HorizontalOptions="Center" />
            
            <Label Text="This test validates that the Source property can navigate to specific routes within a SPA." 
                   FontSize="14" />
            
            <Entry x:Name="sourceEntry" 
                   Placeholder="Enter route (e.g., #/config)" 
                   Text="#/test-route" />
            
            <Button x:Name="navigateButton"
                    Text="Navigate to Route"
                    AutomationId="NavigateButton"
                    Clicked="OnNavigateClicked" />
            
            <Button x:Name="getLocationButton"
                    Text="Get Current Location"
                    AutomationId="GetLocationButton"
                    Clicked="OnGetLocationClicked" />
            
            <Label x:Name="statusLabel" 
                   AutomationId="StatusLabel"
                   Text="Status: Ready" />
            
            <HybridWebView x:Name="hybridWebView"
                           AutomationId="HybridWebView"
                           HeightRequest="400"
                           HybridRoot="HybridTestRoot" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>