<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Issue 19752"
             x:Class="Maui.Controls.Sample.Issues.Issue19752">
  <VerticalStackLayout>
    <VerticalStackLayout.Resources>
      <Style x:Key="DialogButton" TargetType="Button">
        <Setter Property="VisualStateManager.VisualStateGroups">
          <VisualStateGroupList>
            <VisualStateGroup x:Name="CommonStates">
              <VisualState x:Name="Normal">
                <VisualState.Setters>
                  <Setter Property="BackgroundColor" Value="Yellow"/>
                  <Setter Property="Opacity" Value="1"/>
                </VisualState.Setters>
              </VisualState>
              <VisualState x:Name="PointerOver">
                <VisualState.Setters>
                  <Setter Property="BackgroundColor" Value="LightBlue"/>
                  <Setter Property="Opacity" Value="1"/>
                </VisualState.Setters>
              </VisualState>
              <VisualState x:Name="Pressed">
                <VisualState.Setters>
                  <Setter Property="BackgroundColor" Value="Gray"/>
                  <Setter Property="Opacity" Value="1"/>
                </VisualState.Setters>
              </VisualState>
              <VisualState x:Name="Focused">
                <VisualState.Setters>
                  <Setter Property="BackgroundColor" Value="Green"/>
                  <Setter Property="Opacity" Value="1"/>
                </VisualState.Setters>
              </VisualState>
            </VisualStateGroup>
          </VisualStateGroupList>
        </Setter>
      </Style>
    </VerticalStackLayout.Resources>

    <Button x:Name="button1" AutomationId="Button1" Style="{StaticResource DialogButton}" Text="Focused Button" Clicked="button1_Clicked"/>
    <Button x:Name="button2" AutomationId="Button2" Style="{StaticResource DialogButton}" Text="Normal Button"/>
  </VerticalStackLayout>
</ContentPage>