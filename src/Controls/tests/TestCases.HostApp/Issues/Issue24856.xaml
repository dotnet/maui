<?xml version="1.0" encoding="utf-8" ?>
<controls:TestContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:local="clr-namespace:Maui.Controls.Sample.Issues"
			       xmlns:controls="clr-namespace:Maui.Controls.Sample.Issues"
             xmlns:cmp="clr-namespace:Microsoft.Maui.Controls.Compatibility;assembly=Microsoft.Maui.Controls"
             x:Class="Maui.Controls.Sample.Issues.Issue24856">
    <ContentPage.Content>
    <VerticalStackLayout>
      <Label 
        AutomationId="WaitForStubControl"
        Text="Issue 24856"/>
      <ImageButton 
        x:Name="TestImageButton"
        Source="avatar.png" 
        CornerRadius="10" 
        BorderColor="Red" 
        BorderWidth="3" 
        BackgroundColor="Yellow"
        WidthRequest="80"
        HeightRequest="80" 
        HorizontalOptions="StartAndExpand" 
        Margin="24"/>
      <Button 
        AutomationId="UpdateAspect"
        Text="Update ImageButton Aspect"
        Clicked="OnButtonClicked"/>
    </VerticalStackLayout>
  </ContentPage.Content>
</controls:TestContentPage>