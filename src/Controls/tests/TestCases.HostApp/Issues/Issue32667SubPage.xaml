<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.Controls.Sample.Issues.Issue32667SubPage"
             Title="Sub Page">
    
    <VerticalStackLayout
        Padding="30"
        Spacing="25"
        BackgroundColor="LightGreen">
        
        <Label
            Text="Sub Page - NavBar Visible"
            FontSize="24"
            FontAttributes="Bold"
            HorizontalOptions="Center"
            AutomationId="SubPageLabel"/>
        
        <Label
            Text="Navigation bar is visible on this page (default)"
            FontSize="16"
            HorizontalOptions="Center"
            TextColor="DarkGreen"/>
        
        <BoxView
            HeightRequest="200"
            Color="DarkGreen"
            AutomationId="SubPageBox"/>
        
        <Label
            Text="Use the back button to return to the main page."
            FontSize="14"
            HorizontalOptions="Center"
            TextColor="DarkGreen"/>
    </VerticalStackLayout>
</ContentPage>
