<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.Controls.Sample.Issues.Issue24666"
             Title="PointerGestureRecognizer Button Differentiation">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="200"/>
        </Grid.RowDefinitions>
        
        <!-- Instructions -->
        <Label Grid.Row="0" 
               Text="Test mouse button differentiation:&#x0a;Left-click on Primary Button area&#x0a;Right-click on Secondary Button area&#x0a;Try both buttons on Combined Button area"
               FontSize="14"
               Margin="10"/>
        
        <!-- Test Areas -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Primary Button Only -->
            <Border Grid.Column="0" 
                    Background="LightBlue" 
                    StrokeThickness="2" 
                    Stroke="Blue"
                    Margin="5"
                    AutomationId="PrimaryButtonArea">
                <StackLayout>
                    <Label Text="Primary Button Only&#x0a;(Left Click)" 
                           HorizontalOptions="Center" 
                           VerticalOptions="Center"
                           FontAttributes="Bold"/>
                    <Label x:Name="PrimaryEventLabel" 
                           AutomationId="PrimaryEventCount"
                           Text="Events: 0"
                           HorizontalOptions="Center"/>
                </StackLayout>
                <Border.GestureRecognizers>
                    <PointerGestureRecognizer Buttons="Primary"
                                              PointerPressed="OnPrimaryButtonPressed"
                                              PointerReleased="OnPrimaryButtonReleased"/>
                </Border.GestureRecognizers>
            </Border>
            
            <!-- Secondary Button Only -->
            <Border Grid.Column="1" 
                    Background="LightCoral" 
                    StrokeThickness="2" 
                    Stroke="Red"
                    Margin="5"
                    AutomationId="SecondaryButtonArea">
                <StackLayout>
                    <Label Text="Secondary Button Only&#x0a;(Right Click)" 
                           HorizontalOptions="Center" 
                           VerticalOptions="Center"
                           FontAttributes="Bold"/>
                    <Label x:Name="SecondaryEventLabel" 
                           AutomationId="SecondaryEventCount"
                           Text="Events: 0"
                           HorizontalOptions="Center"/>
                </StackLayout>
                <Border.GestureRecognizers>
                    <PointerGestureRecognizer Buttons="Secondary"
                                              PointerPressed="OnSecondaryButtonPressed"
                                              PointerReleased="OnSecondaryButtonReleased"/>
                </Border.GestureRecognizers>
            </Border>
            
            <!-- Combined Buttons -->
            <Border Grid.Column="2" 
                    Background="LightGreen" 
                    StrokeThickness="2" 
                    Stroke="Green"
                    Margin="5"
                    AutomationId="CombinedButtonArea">
                <StackLayout>
                    <Label Text="Primary | Secondary&#x0a;(Left or Right Click)" 
                           HorizontalOptions="Center" 
                           VerticalOptions="Center"
                           FontAttributes="Bold"/>
                    <Label x:Name="CombinedEventLabel" 
                           AutomationId="CombinedEventCount"
                           Text="Events: 0"
                           HorizontalOptions="Center"/>
                </StackLayout>
                <Border.GestureRecognizers>
                    <PointerGestureRecognizer Buttons="Primary, Secondary"
                                              PointerPressed="OnCombinedButtonPressed"
                                              PointerReleased="OnCombinedButtonReleased"/>
                </Border.GestureRecognizers>
            </Border>
        </Grid>
        
        <!-- Event Log -->
        <ScrollView Grid.Row="2" BackgroundColor="LightGray" Margin="10">
            <Label x:Name="EventLogLabel" 
                   AutomationId="EventLog"
                   Text="Event Log:&#x0a;"
                   FontFamily="Consolas"
                   FontSize="12"
                   Padding="5"/>
        </ScrollView>
    </Grid>
</ContentPage>
