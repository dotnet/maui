<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.Controls.Sample.Issues.Issue33142AdjustPan"
             Title="Issue 33142 AdjustPan"
             SafeAreaEdges="None">
    
    <!-- Full-height container to test AdjustPan behavior -->
    <!-- With AdjustPan, container height should NOT change (window pans instead) -->
    <Grid x:Name="MainContainerPan" 
          AutomationId="MainContainerPan"
          BackgroundColor="LightYellow"
          RowDefinitions="*,Auto"
          SafeAreaEdges="All">
        
        <VerticalStackLayout Grid.Row="0" Padding="20" Spacing="10">
            <Label 
                Text="Test keyboard with SoftInput.AdjustNothing"
                FontSize="18"
                FontAttributes="Bold"/>
            
            <Label 
                Text="With AdjustNothing, the container height should NOT change when keyboard appears. SafeAreaEdges should not apply keyboard insets."
                FontSize="14"
                TextColor="DarkGreen"/>
        </VerticalStackLayout>
        
        <!-- Bottom marker -->
        <Border Grid.Row="1"
                AutomationId="BottomMarkerPan"
                BackgroundColor="Green"
                HeightRequest="60"
                Margin="0">
            <VerticalStackLayout Spacing="5" HorizontalOptions="Center" VerticalOptions="Center">
                <Label 
                    Text="BOTTOM MARKER (PAN)"
                    FontSize="12"
                    FontAttributes="Bold"
                    TextColor="White"
                    HorizontalOptions="Center"/>
                <Entry 
                    Placeholder="Tap here to show keyboard"
                    AutomationId="TestEntryPan"
                    BackgroundColor="White"
                    WidthRequest="250"/>
            </VerticalStackLayout>
        </Border>
    </Grid>
</ContentPage>
