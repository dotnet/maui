<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Microsoft.Maui.ManualTests.Views.VerticalListBorderPage"
             Title="Vertical List (BackgroundColor Width)">
    <Grid Margin="20" RowDefinitions="Auto, *">
        <StackLayout>
            <Label Text="1. The test passes if the width of the background color is properly measured for all items." />
        </StackLayout>
        <CollectionView Grid.Row="1"                        
                        ItemsSource="{Binding Monkeys}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="10">
                        <Border>
                            <VerticalStackLayout Background="Aqua">
                                <Label Text="{Binding Name}"
                                       FontAttributes="Bold"/>
                                <Label Text="{Binding Location}"
                                       FontAttributes="Italic"
                                       VerticalOptions="End"/>
                            </VerticalStackLayout>
                        </Border>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>