<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Microsoft.Maui.ManualTests"
             x:Class="Microsoft.Maui.ManualTests.Views.VerticalGridMultiSpanLayoutPage"
             x:Name="Page"
             Title="Vertical Grid (Span GridItemsLayout)">
    <Grid RowDefinitions="Auto, *, 48">
        <StackLayout Grid.Row="0">
            <Label Text="1. The test passes if you can update the Items correctly after clicking the button."/>
        </StackLayout>
        <CollectionView Grid.Row="1">
            <CollectionView.ItemsLayout>
                <GridItemsLayout Span="{Binding ColumnCount, Source={x:Reference Page}}" Orientation="Horizontal"/>
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Label Text="{Binding }"/>
                </DataTemplate>
            </CollectionView.ItemTemplate>
            <CollectionView.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>Item 1</x:String>
                    <x:String>Item 2</x:String>
                    <x:String>Item 3</x:String>
                    <x:String>Item 4</x:String>
                    <x:String>Item 5</x:String>
                    <x:String>Item 6</x:String>
                    <x:String>Item 7</x:String>
                    <x:String>Item 8</x:String>
                    <x:String>Item 9</x:String>
                </x:Array>
            </CollectionView.ItemsSource>
        </CollectionView>
        <Button Grid.Row="2" Clicked="UpdateColumnCount" Text="UpdateColumns" />
    </Grid>
</ContentPage>