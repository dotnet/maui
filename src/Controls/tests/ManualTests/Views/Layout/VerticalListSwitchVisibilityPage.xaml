<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Microsoft.Maui.ManualTests.Views.VerticalListSwitchVisibilityPage"
             Title="Vertical list (Switch CollectionView Visibility)">
    <Grid Padding="30,0" RowDefinitions="Auto, Auto, *">
        <StackLayout Grid.Row="0">
            <Label Text="1. Click Button, the test passes if items are rendered as list layout."/>
        </StackLayout>
        <Button Grid.Row="1"
                x:Name="CounterBtn"
                Text="Click me"
                Command="{Binding MoveCommand}"
                HorizontalOptions="Center" />
        <CollectionView Grid.Row="2"
                        ItemsSource="{Binding Items}"
                        IsVisible="{Binding AreItemsVisible}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid HeightRequest="60" RowDefinitions=" 30,29,1">
                        <Label Grid.Row="0" Text="{Binding Label}" FontSize="20" FontAttributes="Bold"/>
                        <Label Grid.Row="1" Text="{Binding Description}" FontSize="16"/>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>