<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Microsoft.Maui.ManualTests.Views.HorizontalListAddItemsPage"
             Title="Horizontal List(Add items to linear layout)">
    <Grid Margin="20" RowDefinitions="Auto, Auto, *">
        <StackLayout Grid.Row="0">
            <Label Text="1. The test passes if you can see the string 'A Label under the CollectionView'." />
            <Label Text="2. Click Add button, the test passes if the new item is successfully added in the linear layout." />
        </StackLayout>
        <Button Grid.Row="1"
             Text="Add"
             Clicked="ButtonAdd_Clicked"
             HorizontalOptions="Start"
             VerticalOptions="Start" />
        <Grid Grid.Row="2"
              RowDefinitions="Auto, *">
            <CollectionView x:Name="cv1"
                            BackgroundColor="LightSalmon"
                            HeightRequest="50">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Horizontal" />
                </CollectionView.ItemsLayout>
            </CollectionView>
            <Label Grid.Row="1" Text="A Label under the CollectionView" />
        </Grid>
    </Grid>
</ContentPage>