<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="Microsoft.Maui.ManualTests.Views.EmptyViewNullPage"
             Title="EmptyView (Null ItemsSource)">
    <Grid Margin="20" RowDefinitions="Auto, *">
        <StackLayout Grid.Row="0">
            <Label Text="1. The test passes if the string 'No items to display' is shown in this page." />
        </StackLayout>
        <CollectionView Grid.Row="1"
                        SelectionMode="Single"
                        ItemsSource="{Binding EmptyMonkeys}"
                        EmptyView="No items to display" />
    </Grid>
</ContentPage>
