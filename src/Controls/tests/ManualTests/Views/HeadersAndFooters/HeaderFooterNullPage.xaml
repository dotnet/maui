<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Microsoft.Maui.ManualTests.Views.HeaderFooterNullPage"
             Title="Header and footer (Null)">
    <Grid Margin="20" RowDefinitions="Auto, *">
        <StackLayout Grid.Row="0">
            <Label Text="1.The test passes if the header and emptyview content displayed correctly and are not overlapped when itemsource is null." />
        </StackLayout>
        <CollectionView Grid.Row="1"
                        x:Name="collectionView"
                        ItemsSource="{Binding Text}">
            <CollectionView.Header>
                <Label Text="Header: This should show for all cases." TextColor="#512BD4" />
            </CollectionView.Header>
            <CollectionView.EmptyView>
                <Label Text="EmptyView: This should show when no data." TextColor="#512BD4" />
            </CollectionView.EmptyView>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Label Text="{Binding .}" />
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>