<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Microsoft.Maui.ManualTests.Views.HeaderFooterUpdatePage"
             Title="Header and footer (update)">
    <Grid Margin="20" RowDefinitions="Auto, Auto, *">
        <StackLayout Grid.Row="0">
            <Label Text="1. The test passes if the button is able to trigger the onClicked event handler." />
        </StackLayout>
        <Button Grid.Row="1"
                HeightRequest="50"
                BackgroundColor="#512BD4"
                Text="Increment Click Count"
                Margin="20"
                SemanticProperties.Hint="Counts the number of times you click"
                Clicked="OnCounterClicked"
                FontAttributes="Bold"
                HorizontalOptions="Center"/>
        <CollectionView Grid.Row="2"
                        ItemsSource="{Binding Monkeys}">
            <CollectionView.Header>
                <StackLayout BackgroundColor="LightGray">
                    <Label Margin="10,0,0,0"
                           Text="CollectionView Header"
                           FontSize="12"
                           FontAttributes="Bold"
                           x:Name="CounterLabel"/>
                </StackLayout>
            </CollectionView.Header>
        </CollectionView>
    </Grid>
</ContentPage>