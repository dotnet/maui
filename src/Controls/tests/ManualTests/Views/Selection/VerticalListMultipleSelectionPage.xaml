<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="Microsoft.Maui.ManualTests.Views.VerticalListMultipleSelectionPage"
             Title="Vertical list (multiple selection)">
    <Grid Margin="20" RowDefinitions="Auto, Auto, *">
        <StackLayout Grid.Row="0">
            <Label Text="1.Confirm that the CollectionView below is populated with monkeys and can be scrolled."/>
            <Label Text="2.The test passes if multiple items can be selected and all selected items are highlighted."/>
            <Label Text="3.The test passes if the Previous selected item and Current selected item are displayed correctly."/>
        </StackLayout>
        <ScrollView Grid.Row="1"
            HeightRequest="60">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Label Text="Previous selected item:" />
                <Label x:Name="previousSelectedItemLabel"
                           Grid.Column="1" />
                <Label Grid.Row="1"
                           Text="Current selected item:" />
                <Label x:Name="currentSelectedItemLabel"
                           Grid.Row="1"
                           Grid.Column="1" />
            </Grid>
        </ScrollView>
        <CollectionView Grid.Row="2"
                        ItemsSource="{Binding Monkeys}"
                        SelectionMode="Multiple"
                        SelectionChanged="OnCollectionViewSelectionChanged">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Image Grid.RowSpan="2" 
                               Source="{Binding ImageUrl}" 
                               Aspect="AspectFill"
                               HeightRequest="60" 
                               WidthRequest="60" />
                        <Label Grid.Column="1" 
                               Text="{Binding Name}" 
                               FontAttributes="Bold" />
                        <Label Grid.Row="1"
                               Grid.Column="1" 
                               Text="{Binding Location}"
                               FontAttributes="Italic" 
                               VerticalOptions="End" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>
