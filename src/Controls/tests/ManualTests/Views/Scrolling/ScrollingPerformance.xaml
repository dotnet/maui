<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Microsoft.Maui.ManualTests.Views.ScrollingPerformance"
             Title="Scrolling Performance">
    <Grid Padding="8"
          RowDefinitions="auto,auto,auto,*"
          RowSpacing="8">
        <StackLayout Grid.Row="0">
            <Label Text="1. Verify the scrolling is smooth without delay in the different heights of CollectionView by clicking 'Set 500.5' button and 'Set 400' button." />
        </StackLayout>
        <Button Grid.Row="1"
                Text="Set 500.5"
                Clicked="Button_Clicked"/>
        <Button Grid.Row="2"
                Text="Set 400"
                Clicked="Button_Clicked_1"/>
        <CollectionView Grid.Row="3"
                        Background="#80ff00ff"
                        x:Name="collection" />
    </Grid>
</ContentPage>