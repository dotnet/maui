		<Style x:Key="ImageDropdownArrow" TargetType="Image">
			<Setter Property="Margin" Value="4,4,10,0" />
			<Setter Property="IsEnabled" Value="False" />
			<Setter Property="VerticalOptions" Value="Center" />
			<Setter Property="HorizontalOptions" Value="End" />
			<Setter Property="WidthRequest" Value="20" />
			<Setter Property="HeightRequest" Value="20" />
			<Setter Property="Source">
				<Setter.Value>
					<FontImageSource
					Glyph="{x:Static share:FontGlyphs.DropDownArrow}"
					FontFamily="Ionicons"
					Size="100"
					Color="{DynamicResource PickerPlaceholderTextColor}" />
				</Setter.Value>
			</Setter>
		</Style>

		<Style x:Key="Button" TargetType="Button">
			<Setter Property="HorizontalOptions" Value="FillAndExpand" />
			<Setter Property="FontFamily" Value="DefaultStrong" />
			<Setter Property="CornerRadius" Value="8" />
			<Setter Property="TextColor" Value="White" />
			<Setter Property="FontSize" Value="16" />
			<Setter Property="Background" Value="{DynamicResource AccentColor}" />
			<Setter Property="VisualStateManager.VisualStateGroups">
				<VisualStateGroupList>
					<VisualStateGroup x:Name="CommonStates">
						<VisualState x:Name="Normal">
							<VisualState.Setters>
								<Setter Property="Background" Value="{DynamicResource AccentColor}" />
								<Setter Property="TextColor" Value="White" />
							</VisualState.Setters>
						</VisualState>
						<VisualState x:Name="Disabled">
							<VisualState.Setters>
								<Setter Property="Background" Value="{DynamicResource ButtonDisabledBackgroundColor}" />
								<Setter Property="TextColor" Value="#606060" />
							</VisualState.Setters>
						</VisualState>
					</VisualStateGroup>
				</VisualStateGroupList>
			</Setter>
		</Style>

		<Style x:Key="Separator" TargetType="Border">
			<Setter Property="HeightRequest" Value="1" />
			<Setter Property="HorizontalOptions" Value="FillAndExpand" />
			<Setter Property="Background" Value="{DynamicResource DividerColor}" />
			<Setter Property="VerticalOptions" Value="Center" />
			<Setter Property="Margin" Value="0,6,0,6" />
		</Style>

		<Style x:Key="InfoFrame" TargetType="Border">
			<Setter Property="StrokeShape">
