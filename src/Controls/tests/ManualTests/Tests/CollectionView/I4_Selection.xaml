<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:Microsoft.Maui.ManualTests.Views"
             x:Class="Microsoft.Maui.ManualTests.Tests.CollectionView.I4_Selection"
             Title="I4_Selection">
    <TableView Intent="Menu">
        <TableRoot>
            <TableSection>
                <TextCell Text="Single"
                          Detail="Vertical list"
                          Command="{Binding NavigateCommand}"
                          CommandParameter="{x:Type views:VerticalListSingleSelectionPage}" />
                <TextCell Text="Multiple"
                          Detail="Vertical list"
                          Command="{Binding NavigateCommand}"
                          CommandParameter="{x:Type views:VerticalListMultipleSelectionPage}" />
                <TextCell Text="Single pre-selection"
                          Detail="Vertical list"
                          Command="{Binding NavigateCommand}"
                          CommandParameter="{x:Type views:VerticalListSinglePreSelectionPage}" />
                <TextCell Text="Multiple pre-selection"
                          Detail="Vertical list"
                          Command="{Binding NavigateCommand}"
                          CommandParameter="{x:Type views:VerticalListMultiplePreSelectionPage}" />
                <TextCell Text="Selection color"
                          Detail="Vertical list"
                          Command="{Binding NavigateCommand}"
                          CommandParameter="{x:Type views:VerticalListSelectionColorPage}" />
                <TextCell Text="Selection None"
                          Detail="Vertical list"
                          Command="{Binding NavigateCommand}"
                          CommandParameter="{x:Type views:VerticalListSelectionNonePage}" />
            </TableSection>
        </TableRoot>
    </TableView>
</ContentPage>