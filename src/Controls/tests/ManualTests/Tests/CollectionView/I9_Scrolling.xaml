<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:Microsoft.Maui.ManualTests.Views"
             x:Class="Microsoft.Maui.ManualTests.Tests.CollectionView.I9_Scrolling"
             Title="I9_Scrolling">
    <TableView Intent="Menu">
        <TableRoot>
            <TableSection>
                <TextCell Text="Scroll by index"
                          Detail="ScrollTo"
                          Command="{Binding NavigateCommand}"
                          CommandParameter="{x:Type views:ScrollToByIndexPage}" />
                <TextCell Text="Scroll by object"
                          Detail="ScrollTo"
                          Command="{Binding NavigateCommand}"
                          CommandParameter="{x:Type views:ScrollToByObjectPage}" />
                <TextCell Text="Scroll by index"
                          Detail="Grouped data"
                          Command="{Binding NavigateCommand}"
                          CommandParameter="{x:Type views:ScrollToByIndexWithGroupingPage}" />
                <TextCell Text="Scroll by object"
                          Detail="Grouped data"
                          Command="{Binding NavigateCommand}"
                          CommandParameter="{x:Type views:ScrollToByObjectWithGroupingPage}" />
                <TextCell Text="Snap points"
                          Detail="Type and alignment"
                          Command="{Binding NavigateCommand}"
                          CommandParameter="{x:Type views:VerticalListSnapPointsPage}" />
                <TextCell Text="Scroll mode when adding items"
                          Detail="ItemsUpdatingScrollMode"
                          Command="{Binding  NavigateCommand}"
                          CommandParameter="{x:Type views:ItemsUpdatingScrollModePage}" />
                <TextCell Text="Incremental loading on scroll"
                          Detail="RemainingItemsThreshold"
                          Command="{Binding NavigateCommand}"
                          CommandParameter="{x:Type views:IncrementalLoadingPage}" />
                <TextCell Text="Scrolling performance"
                          Detail="CollectionView With different Heights"
                          Command="{Binding  NavigateCommand}"
                          CommandParameter="{x:Type views:ScrollingPerformance}" />
                <TextCell Text="Scrolling with no jitter"
                          Detail="Items with different Heights "
                          Command="{Binding  NavigateCommand}"
                          CommandParameter="{x:Type views:SelectMainPage}" />
            </TableSection>
        </TableRoot>
    </TableView>
</ContentPage>