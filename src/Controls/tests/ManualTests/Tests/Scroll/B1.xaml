<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="Microsoft.Maui.ManualTests.Tests.Scroll.B1"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="B1">
    <ScrollView>
        <VerticalStackLayout Spacing="20">
            <Rectangle Background="Yellow"
                       HeightRequest="500"
                       HorizontalOptions="FillAndExpand" />
            <Rectangle Background="Purple"
                       HeightRequest="500"
                       HorizontalOptions="FillAndExpand" />
            <Rectangle Background="Yellow"
                       HeightRequest="500"
                       HorizontalOptions="FillAndExpand" />
            <Rectangle Background="Purple"
                       HeightRequest="500"
                       HorizontalOptions="FillAndExpand" />

            <VerticalStackLayout x:Name="ButtonContainer"
                                 BackgroundColor="Red">
                <Label Margin="5,0,0,0"
                       FontAttributes="Bold"
                       Text="Button" />
                <Button Clicked="Button_Clicked"
                        Text="Button"
                        WidthRequest="200" />
            </VerticalStackLayout>

            <VerticalStackLayout x:Name="ImageButtonContainer"
                                 BackgroundColor="Red">
                <Label Margin="5,0,0,0"
                       FontAttributes="Bold"
                       Text="ImageButton" />
                <ImageButton Clicked="ImageButton_Clicked"
                             Source="dotnet_bot.svg" />
            </VerticalStackLayout>

            <VerticalStackLayout x:Name="RadioButtonContainer"
                                 BackgroundColor="Red">
                <Label Margin="5,0,0,0"
                       FontAttributes="Bold"
                       Text="RadioButton" />
                <RadioButton CheckedChanged="RadioButton_CheckedChanged"
                             Content="RadioButton" />
            </VerticalStackLayout>

            <VerticalStackLayout x:Name="SearchBarContainer"
                                 BackgroundColor="Red">
                <Label Margin="5,0,0,0"
                       FontAttributes="Bold"
                       Text="SearchBar" />
                <SearchBar Placeholder="Search..."
                           SearchButtonPressed="SearchBar_SearchButtonPressed" />
            </VerticalStackLayout>

            <VerticalStackLayout x:Name="SwipeViewContainer"
                                 BackgroundColor="Red">
                <Label Margin="5,0,0,0"
                       FontAttributes="Bold"
                       Text="SwipeView" />
                <SwipeView WidthRequest="250">
                    <SwipeView.LeftItems>
                        <SwipeItems>
                            <SwipeItem BackgroundColor="LightGreen"
                                       IconImageSource="favorite.png"
                                       Invoked="SwipeItem_Invoked"
                                       Text="Click or Tap" />
                        </SwipeItems>
                    </SwipeView.LeftItems>
                    <!--  Content  -->
                    <Grid BackgroundColor="LightGray"
                          HeightRequest="60"
                          WidthRequest="250">
                        <Label HorizontalOptions="Center"
                               Text="Swipe right"
                               VerticalOptions="Center" />
                    </Grid>
                </SwipeView>
            </VerticalStackLayout>

            <VerticalStackLayout x:Name="CheckBoxContainer"
                                 BackgroundColor="Red">
                <Label Margin="5,0,0,0"
                       FontAttributes="Bold"
                       Text="CheckBox" />
                <CheckBox CheckedChanged="CheckBox_CheckedChanged" />
            </VerticalStackLayout>

            <VerticalStackLayout x:Name="DatePickerContainer"
                                 BackgroundColor="Red">
                <Label Margin="5,0,0,0"
                       FontAttributes="Bold"
                       Text="DatePicker" />
                <DatePicker Date="06/21/2022"
                            DateSelected="DatePicker_DateSelected"
                            MaximumDate="12/31/2022"
                            MinimumDate="01/01/2022" />
            </VerticalStackLayout>

            <VerticalStackLayout x:Name="SliderContainer"
                                 BackgroundColor="Red">
                <Label Margin="5,0,0,0"
                       FontAttributes="Bold"
                       Text="Slider" />
                <Slider ValueChanged="Slider_ValueChanged" />
            </VerticalStackLayout>

            <VerticalStackLayout x:Name="StepperContainer"
                                 BackgroundColor="Red">
                <Label Margin="5,0,0,0"
                       FontAttributes="Bold"
                       Text="Stepper" />
                <Stepper HorizontalOptions="Center"
                         Increment="30"
                         Maximum="360"
                         ValueChanged="Stepper_ValueChanged" />
            </VerticalStackLayout>

            <VerticalStackLayout x:Name="SwitchContainer"
                                 BackgroundColor="Red">
                <Label Margin="5,0,0,0"
                       FontAttributes="Bold"
                       Text="Switch" />
                <Switch Toggled="Switch_Toggled" />
            </VerticalStackLayout>

            <VerticalStackLayout x:Name="TimePickerContainer"
                                 BackgroundColor="Red">
                <Label Margin="5,0,0,0"
                       FontAttributes="Bold"
                       Text="TimePicker" />
                <TimePicker PropertyChanged="TimePicker_PropertyChanged"
                            Time="4:15:26" />
            </VerticalStackLayout>

            <VerticalStackLayout x:Name="EditorContainer"
                                 BackgroundColor="Red">
                <Label Margin="5,0,0,0"
                       FontAttributes="Bold"
                       Text="Editor" />
                <Editor Completed="Editor_Completed"
                        HeightRequest="250"
                        Placeholder="Enter your response here..."
                        TextChanged="Editor_TextChanged" />
            </VerticalStackLayout>

            <VerticalStackLayout x:Name="EntryContainer"
                                 BackgroundColor="Red">
                <Label Margin="5,0,0,0"
                       FontAttributes="Bold"
                       Text="Entry" />
                <Entry Completed="Entry_Completed"
                       Placeholder="Enter text here..."
                       TextChanged="Entry_TextChanged" />
            </VerticalStackLayout>

            <VerticalStackLayout x:Name="ImageContainer"
                                 BackgroundColor="Transparent">
                <Label Margin="5,0,0,0"
                       FontAttributes="Bold"
                       Text="Image" />
                <Image Source="dotnet_bot.svg" />
            </VerticalStackLayout>

            <VerticalStackLayout x:Name="AnimatedImageContainer"
                                 BackgroundColor="Transparent">
                <Label Margin="5,0,0,0"
                       FontAttributes="Bold"
                       Text="Image (animated)" />
                <Image IsAnimationPlaying="True"
                       Source="animated_heart.gif" />
            </VerticalStackLayout>

            <VerticalStackLayout x:Name="ActivityIndicatorContainer"
                                 BackgroundColor="Transparent">
                <Label Margin="5,0,0,0"
                       FontAttributes="Bold"
                       Text="ActivityIndicator" />
                <ActivityIndicator IsRunning="true" />
            </VerticalStackLayout>

            <VerticalStackLayout x:Name="ProgressBarContainer"
                                 BackgroundColor="Transparent">
                <Label Margin="5,0,0,0"
                       FontAttributes="Bold"
                       Text="ProgressBar" />
                <ProgressBar Progress="0.5" />
            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
