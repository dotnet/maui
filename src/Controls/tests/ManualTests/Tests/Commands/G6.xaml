<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="Microsoft.Maui.ManualTests.Tests.Commands.G6"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Microsoft.Maui.ManualTests.Tests.Commands"
             Title="G6"
             x:DataType="local:MainPageViewModel">

    <Grid RowDefinitions="Auto,Auto,Auto,Auto,*">
        <Label Grid.Row="0" Text="1. Scroll down the list below until the list starts displaying the number 3." />
        <Label Grid.Row="1" Text="2. Wait for the new data to load and continue scrolling until the list starts displaying the number 4." />
        <Label Grid.Row="2" Text="3. Continue this pattern until the list starts displaying the number 10." />
        <Label Grid.Row="3" Text="4. The test fails if the list scrolls you back to the top or you are not able to reach 10." />

        <CollectionView x:Name="MyCollectionViews"
                        Grid.Row="4" 
                        Margin="5"
                        IsGrouped="True"
                        ItemsSource="{Binding StudyGroups}"
                        RemainingItemsThreshold="1"
                        RemainingItemsThresholdReachedCommand="{Binding ThresholdReachedCommand, Source={RelativeSource AncestorType={x:Type local:MainPageViewModel}}}"
                        SelectionMode="None"
                        VerticalOptions="Fill">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="local:Person">
                    <Border Margin="0"
                            Padding="5"
                            VerticalOptions="Fill">
                        <VerticalStackLayout VerticalOptions="Center">
                            <Label FontAttributes="Bold"
                                   FontSize="32"
                                   HeightRequest="50"
                                   HorizontalTextAlignment="Center"
                                   Text="{Binding Name}"
                                   VerticalOptions="CenterAndExpand" />
                        </VerticalStackLayout>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>
