<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="Microsoft.Maui.ManualTests.Tests.Commands.G8"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Microsoft.Maui.ManualTests.Tests.Commands"
             Title="G8"
             x:DataType="local:G8">
    <Shell.TitleView>
        <ImageButton Command="{Binding ImageButtonCommand}"
                     HeightRequest="25"
                     Source="dotnet_bot.png"
                     WidthRequest="25" />
    </Shell.TitleView>

    <VerticalStackLayout>
        <Label Text="1. Click on the dotnet bot image in the title bar of the page." />
        <Label x:Name="Label"
               Text="2. The test fails if this label does not turn green." />
    </VerticalStackLayout>
</ContentPage>
