             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="G3">
    <ContentPage.MenuBarItems>
        <MenuBarItem Text="Pages">
            <MenuFlyoutItem Command="{Binding MenuCommand}"
