<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="Microsoft.Maui.ManualTests.Tests.RefreshView.D2"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="D2">
    <VerticalStackLayout>
        <Label Text="1. Play with the value of the slider below and observe as the space between characters widens." />
        <Label Text="2. The tests fails if the space between characters does not change." />
        <Slider x:Name="Slider"
                Maximum="100"
                Minimum="0" />
        <Editor BindingContext="{x:Reference Slider}"
                CharacterSpacing="{Binding Value}"
                Text="testing" />
    </VerticalStackLayout>
</ContentPage>
