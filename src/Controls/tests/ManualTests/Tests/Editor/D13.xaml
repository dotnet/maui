                <Editor BackgroundColor="LightBlue"
                        HorizontalTextAlignment="Center"
                        IsReadOnly="True"
                        Text="testing"
                        TextColor="Black"
                        VerticalTextAlignment="Center" />
            </Grid>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
