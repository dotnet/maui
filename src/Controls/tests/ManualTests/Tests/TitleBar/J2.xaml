<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Microsoft.Maui.ManualTests.Tests.TitleBar.J2"
             xmlns:local="clr-namespace:Microsoft.Maui.ManualTests.Tests.TitleBar"
             Title="J2">
    <ScrollView>
        <VerticalStackLayout>
            <Label Text="1. Click button 'Push Modal Page'." />
            <Label Text="2. Confirm that the App TitleBar is not missing and displayed normally.(Titlebar is only available on Net9 and later. And it is only available on Windows. Mac Catalyst support will be added in a future release. )" />
            <Label Text="3. Click button 'Pop Modal Page' to leave this page." />
            <Label Text="4. Back to main TitleBar test page, confirm the windows title bar change to default behavior." />
            <Grid Margin="12" RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto">
                <Label Grid.Row="0" Text="{x:Static local:J2.ModalStackCountText2}"></Label>
                <Button Grid.Row="1" Clicked="PushModalClicked" Text="Push Modal Page" />
                <Button Grid.Row="2" x:Name="PopModal" Clicked="PopModalClicked" Text="Pop Modal Page" />
            </Grid>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>