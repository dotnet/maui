<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
		xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
		xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
		xmlns:local="clr-namespace:Microsoft.Maui.Controls.Xaml.UnitTests.Issues"
		x:Class="Microsoft.Maui.Controls.Xaml.UnitTests.Issues.CommandParameterReparenting">
	<ContentPage.Resources>
		<ControlTemplate x:Key="FooterTemplate">
			<Grid x:Name="MainLayout">
				<Button x:Name="TestButton"
						Text="Test"
						Command="{TemplateBinding TestCommand}"
						CommandParameter="{TemplateBinding TestCommandParameter}" />
			</Grid>
		</ControlTemplate>
	</ContentPage.Resources>

	<local:FooterControl
		x:Name="FooterControlInstance"
		TestCommandParameter="TestValue"
		ControlTemplate="{StaticResource FooterTemplate}" />
</ContentPage>
