<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.Controls.Sample.SubPage"
             Title="Sub Page">
    <VerticalStackLayout
        Padding="30"
        Spacing="25"
        BackgroundColor="LightGreen">
        
        <Label
            Text="Sub Page"
            FontSize="32"
            FontAttributes="Bold"
            HorizontalOptions="Center"
            Margin="0,50,0,0"/>
        
        <Label
            Text="Navigation bar is visible on this page (default)"
            FontSize="16"
            HorizontalOptions="Center"
            TextColor="DarkGreen"/>
        
        <BoxView
            HeightRequest="200"
            Color="DarkGreen"
            Margin="0,20,0,0"/>
        
        <Label
            Text="Use the back button in the navigation bar to return to the main page."
            FontSize="14"
            HorizontalOptions="Center"
            TextColor="DarkGreen"
            Margin="0,20,0,0"/>
    </VerticalStackLayout>
</ContentPage>
