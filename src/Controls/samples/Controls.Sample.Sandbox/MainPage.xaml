<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:maps="clr-namespace:Microsoft.Maui.Controls.Maps;assembly=Microsoft.Maui.Controls.Maps"
             x:Class="Maui.Controls.Sample.MainPage"
             Title="Maps Demo"
             AutomationId="MapsPage">
    <Grid RowDefinitions="Auto,Auto,*,Auto">

        <!-- Navigation buttons -->
        <HorizontalStackLayout Grid.Row="0" Spacing="8" Padding="8">
            <Button Text="London" AutomationId="LondonButton" Clicked="OnLondonClicked" />
            <Button Text="New York" AutomationId="NewYorkButton" Clicked="OnNewYorkClicked" />
            <Button Text="Tokyo" AutomationId="TokyoButton" Clicked="OnTokyoClicked" />
            <Button Text="Add Pin" AutomationId="AddPinButton" Clicked="OnAddPinClicked" />
            <Button Text="Clear Pins" AutomationId="ClearPinsButton" Clicked="OnClearPinsClicked" />
        </HorizontalStackLayout>

        <!-- Feature controls -->
        <HorizontalStackLayout Grid.Row="1" Spacing="8" Padding="8">
            <Button Text="Street" AutomationId="StreetButton" Clicked="OnStreetClicked" />
            <Button Text="Satellite" AutomationId="SatelliteButton" Clicked="OnSatelliteClicked" />
            <Button Text="Hybrid" AutomationId="HybridButton" Clicked="OnHybridClicked" />
            <Button Text="Traffic" AutomationId="TrafficButton" Clicked="OnTrafficClicked" />
            <Button Text="Toggle Scroll" AutomationId="ToggleScrollButton" Clicked="OnToggleScrollClicked" />
            <Button Text="Toggle Zoom" AutomationId="ToggleZoomButton" Clicked="OnToggleZoomClicked" />
        </HorizontalStackLayout>

        <!-- Map control -->
        <maps:Map x:Name="map" Grid.Row="2"
                  AutomationId="MainMap"
                  IsZoomEnabled="True"
                  IsScrollEnabled="True" />

        <!-- Status bar -->
        <Label x:Name="statusLabel" Grid.Row="3"
               AutomationId="StatusLabel"
               Text="Ready"
               Padding="8" FontSize="12" />
    </Grid>
</ContentPage>