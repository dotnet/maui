<?xml version="1.0" encoding="UTF-8"?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="Maui.Controls.Sample.Pages.WindowsAddRemoveToolbarItemsPage">
  <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
    <Button Text="Add Primary" BackgroundColor="Gray" Clicked="OnAddPrimaryButtonClicked" />
    <Button Text="Add Secondary" BackgroundColor="Gray" Clicked="OnAddSecondaryButtonClicked" />
    <Button Text="Remove" BackgroundColor="Gray" Clicked="OnRemoveButtonClicked" />
    <Button Text="Toggle Visibility" BackgroundColor="LightBlue" Clicked="OnToggleVisibilityClicked" />
  </StackLayout>
</ContentPage>
