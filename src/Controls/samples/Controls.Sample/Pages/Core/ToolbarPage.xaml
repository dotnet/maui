<?xml version="1.0" encoding="utf-8" ?>
<views:BasePage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Maui.Controls.Sample.Pages.ToolbarPage"    
    xmlns:views="clr-namespace:Maui.Controls.Sample.Pages.Base">
    <views:BasePage.ToolbarItems>
        <ToolbarItem x:Name="primary1" Text="Test (1)" Clicked="ItemClicked" />
        <ToolbarItem Text="Test (2)" Clicked="ItemClicked" />
        <ToolbarItem x:Name="secondary1" Text="Test Secondary (1)" Order="Secondary" Priority="1" IconImageSource="coffee.png" Clicked="ItemClicked" />
        <ToolbarItem x:Name="secondary2" Text="Test Secondary (2)" Order="Secondary" Priority="2" Clicked="ItemClicked">
            <ToolbarItem.IconImageSource>
                <FontImageSource FontFamily = "Ionicons" Glyph = "&#xf30c;" Color="Red" />
            </ToolbarItem.IconImageSource>
        </ToolbarItem>
        <ToolbarItem x:Name="secondary4" Text="Test Secondary (4)" Order="Secondary" Priority="4" Clicked="ItemClicked" IsEnabled="False" />
        <ToolbarItem x:Name="secondary3" Text="Test Secondary (3)" Order="Secondary" Priority="3" Command="{Binding ClickedCommand}" />
    </views:BasePage.ToolbarItems>
    <views:BasePage.Content>
        <VerticalStackLayout Margin="12">
            <Label x:Name="menuLabel" Text="You clicked on ToolbarItem: {none}" />
            <Button Text="Enable/Disable Test (1)" Clicked="Button_Clicked1" />
            <Button Text="Enable/Disable Test Secondary (4)" Clicked="Button_Clicked" />
            <Button Text="Enable/Disable Test Secondary (2) after 5 seconds" Clicked="Button_Clicked2" />
            <Button Text="Change text on Test Secondary (1)" Clicked="Button_Clicked3" />
            <Button Text="Remove/Add Secondary (3)" Clicked="Button_Clicked4" />
            <Button Text="Change Command Property on Secondary (3)" Clicked="Button_Clicked5" />
        </VerticalStackLayout>
    </views:BasePage.Content>
</views:BasePage>