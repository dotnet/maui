<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Maui.Controls.Sample.Gallery.SurfingApp.HomePage"
    xmlns:local="clr-namespace:Maui.Controls.Sample.Gallery.SurfingApp"
    xmlns:views="clr-namespace:Maui.Controls.Sample.Pages.Base">
    <ContentPage.Resources>
        <ResourceDictionary>

            <local:ToUpperConverter x:Key="ToUpperConverter" />

            <Style x:Key="HeaderLayoutStyle" TargetType="Grid">
                <Setter Property="VerticalOptions" Value="Center" />
                <Setter Property="Margin" Value="24, 6" />
            </Style>

            <Style x:Key="HeaderIconStyle" TargetType="Path">
                <Setter Property="Fill" Value="Black" />
                <Setter Property="Scale" Value="0.75" />
                <Setter Property="VerticalOptions" Value="Center" />
                <Setter Property="HeightRequest" Value="40" />
                <Setter Property="WidthRequest" Value="40" />
            </Style>

            <Style x:Key="TitleStyle" TargetType="Label">
                <Setter Property="FontSize" Value="28" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="TextColor" Value="Black" />
                <Setter Property="HorizontalOptions" Value="Center" />
                <Setter Property="VerticalOptions" Value="Center" />
            </Style>

        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.BindingContext>
        <local:HomeViewModel />
    </ContentPage.BindingContext>
