<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.Controls.Sample.Issues.Issue18131">
    <StackLayout
        Padding="12">
        <Rectangle
            x:Name="RectangleTest"
            HeightRequest="100"
            WidthRequest="100"
            BackgroundColor="Red"
            Margin="0, 12"/>
        <Ellipse
            x:Name="EllipseTest"
            HeightRequest="100"
            WidthRequest="100"
            BackgroundColor="Red"
            Margin="0, 12"/>
        <Button
            AutomationId="ChangeColorButton"
            Text="Update Color"
            Clicked="OnButtonClicked"/>
    </StackLayout>
</ContentPage>