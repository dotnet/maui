<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:maps="http://schemas.microsoft.com/dotnet/2021/maui/maps"
    xmlns:models="clr-namespace:Maui.Controls.Sample.Models"
    x:Class="Maui.Controls.Sample.Views.Itinerary.LandmarkDetailMapView"
    x:DataType="models:Landmark"
    x:Name="MapControl">

    <maps:Map x:Name="map" 
              IsEnabled="False" 
              IsScrollEnabled="False" 
              IsZoomEnabled="False">
        <maps:Map.ItemTemplate>
            <DataTemplate x:DataType="models:Landmark">
                <maps:Pin Location="{Binding Location}" Label="{Binding Name}" />
            </DataTemplate>
        </maps:Map.ItemTemplate>
    </maps:Map>

</ContentView>
