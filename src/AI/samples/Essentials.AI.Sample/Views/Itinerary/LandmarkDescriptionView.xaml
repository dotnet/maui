<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewModels="clr-namespace:Maui.Controls.Sample.ViewModels"
    x:Class="Maui.Controls.Sample.Views.Itinerary.LandmarkDescriptionView"
    x:DataType="viewModels:TripPlanningViewModel">

    <VerticalStackLayout Padding="20" Spacing="16">

        <Label Text="{Binding Landmark.Name}" FontSize="32" FontAttributes="Bold" />
        
        <FlexLayout Wrap="Wrap" JustifyContent="Start" AlignItems="Start" BindableLayout.ItemsSource="{Binding GeneratedTags}">
            <BindableLayout.ItemTemplate>
                <DataTemplate x:DataType="{x:Type x:String}">
                    <Border Padding="12,8" Margin="0,0,8,8" StrokeShape="RoundRectangle 20" StrokeThickness="0"
                            BackgroundColor="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray800}}">
                        <Label Text="{Binding ., StringFormat='#{0}'}" FontSize="14" FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource Gray400}}" />
                    </Border>
                </DataTemplate>
            </BindableLayout.ItemTemplate>
        </FlexLayout>
        
        <Label Text="{Binding Landmark.ShortDescription}" FontSize="16" LineBreakMode="WordWrap" />

    </VerticalStackLayout>

</ContentView>
