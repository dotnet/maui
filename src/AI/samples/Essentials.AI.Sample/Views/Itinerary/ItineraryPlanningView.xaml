<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewModels="clr-namespace:Maui.Controls.Sample.ViewModels"
    x:Class="Maui.Controls.Sample.Views.Itinerary.ItineraryPlanningView"
    x:DataType="viewModels:TripPlanningViewModel">

    <VerticalStackLayout Padding="20" Spacing="20">
        <Label Text="âœ¨" FontSize="32" />
        <Label Text="{Binding Landmark.Name, StringFormat='Planning itinerary for {0}...'}" 
               FontSize="28" FontAttributes="Bold" />
        
        <!-- Fading status trail - 3 stacked labels with decreasing opacity -->
        <VerticalStackLayout Spacing="4" MinimumHeightRequest="80">
            <!-- Oldest message (most faded) -->
            <Label Text="{Binding Status1}" 
                   FontSize="14" FontAttributes="Italic"
                   TextColor="{StaticResource Primary}"
                   Opacity="0.3"
                   IsVisible="{Binding Status1, Converter={StaticResource IsNotNullConverter}}" />
            
            <!-- Middle message -->
            <Label Text="{Binding Status2}" 
                   FontSize="14" FontAttributes="Italic"
                   TextColor="{StaticResource Primary}"
                   Opacity="0.6"
                   IsVisible="{Binding Status2, Converter={StaticResource IsNotNullConverter}}" />
            
            <!-- Newest message (solid) -->
            <Label Text="{Binding Status3}" 
                   FontSize="16" FontAttributes="Italic"
                   TextColor="{StaticResource Primary}"
                   Opacity="1.0"
                   IsVisible="{Binding Status3, Converter={StaticResource IsNotNullConverter}}" />
        </VerticalStackLayout>
        
        <ActivityIndicator IsRunning="True" HorizontalOptions="Center" Margin="0,20,0,0" />

    </VerticalStackLayout>

</ContentView>
