<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:models="clr-namespace:Maui.Controls.Sample.Models"
    xmlns:views="clr-namespace:Maui.Controls.Sample.Views.Landmarks"
    x:Class="Maui.Controls.Sample.Views.Landmarks.LandmarkHorizontalListView">
    
    <ScrollView Orientation="Horizontal" HorizontalScrollBarVisibility="Never">
        <HorizontalStackLayout
            x:Name="LandmarksStack"
            BindableLayout.ItemsSource="{Binding Source={RelativeSource AncestorType={x:Type views:LandmarkHorizontalListView}}, Path=Landmarks}"
            Spacing="15">
            <BindableLayout.ItemTemplate>
                <DataTemplate x:DataType="models:Landmark">
                    <views:LandmarkListItemView
                        Landmark="{Binding .}"
                        LandmarkTapped="OnLandmarkItemTapped" />
                </DataTemplate>
            </BindableLayout.ItemTemplate>
        </HorizontalStackLayout>
    </ScrollView>
    
</ContentView>
