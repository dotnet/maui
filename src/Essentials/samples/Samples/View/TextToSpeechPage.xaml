<?xml version="1.0" encoding="utf-8" ?>
<views:BasePage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                xmlns:views="clr-namespace:Samples.View"
                xmlns:viewmodels="clr-namespace:Samples.ViewModel"
                x:Class="Samples.View.TextToSpeechPage"
                Title="Text To Speech">
    <ContentPage.BindingContext>
        <viewmodels:TextToSpeechViewModel />
    </ContentPage.BindingContext>

    <Grid RowDefinitions="Auto,*">
        <Label Text="Easily let your device speak for you." FontAttributes="Bold" Margin="12" />

        <ScrollView Grid.Row="1">
            <StackLayout Padding="12,0,12,12" Spacing="6">
                <Label Text="Text :" />
                <Editor Text="{Binding Text}" AutoSize="TextChanges" />
                <Button Text="Speak" Command="{Binding SpeakCommand}" CommandParameter="{Binding Source={x:Reference SwitchMultiple}, Path=IsToggled}" IsEnabled="{Binding IsNotBusy}" />
                <Button Text="Cancel" Command="{Binding CancelCommand}" IsEnabled="{Binding IsBusy}" />

                <Label Text="Multiple Lines Of Text" HorizontalOptions="Start" />
                <Switch HorizontalOptions="Center" x:Name="SwitchMultiple"/>

                <Label Text="Advanced" HorizontalOptions="Start" />
                <Switch HorizontalOptions="Center" IsToggled="{Binding AdvancedOptions}"/>

                <Label Text="Volume" HorizontalOptions="Start"  IsVisible="{Binding AdvancedOptions}"/>
                <Label Text="{Binding Volume}" HorizontalOptions="Center"  IsVisible="{Binding AdvancedOptions}"/>
                <Slider Value="{Binding Volume}" Minimum="0.0" Maximum="1.0" IsVisible="{Binding AdvancedOptions}"/>

                <Label Text="Pitch" HorizontalOptions="Start"  IsVisible="{Binding AdvancedOptions}"/>
                <Label Text="{Binding Pitch}" HorizontalOptions="Center"  IsVisible="{Binding AdvancedOptions}"/>
                <Slider Value="{Binding Pitch}" Minimum="0.0" Maximum="2.0" IsVisible="{Binding AdvancedOptions}"/>

                <Label Text="Rate" HorizontalOptions="Start" IsVisible="{Binding AdvancedOptions}"/>
                <Label Text="{Binding Rate}" HorizontalOptions="Center" IsVisible="{Binding AdvancedOptions}"/>
                <Slider Value="{Binding Rate}" Minimum="0.1" Maximum="2.0" IsVisible="{Binding AdvancedOptions}"/>

                <Button Text="Pick Locale" Command="{Binding PickLocaleCommand}" IsVisible="{Binding AdvancedOptions}"/>
                <Label Text="{Binding Locale}" IsVisible="{Binding AdvancedOptions}"/>

                <ActivityIndicator IsVisible="{Binding IsBusy}" IsRunning="{Binding IsBusy}" />
            </StackLayout>
        </ScrollView>
    </Grid>

</views:BasePage>