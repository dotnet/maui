<?xml version="1.0" encoding="utf-8" ?>
<views:BasePage  xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://schemas.microsoft.com/dotnet/2021/maui/design"
             xmlns:views="clr-namespace:Samples.View"
             xmlns:viewmodels="clr-namespace:Samples.ViewModel"
             xmlns:essentials="clr-namespace:Microsoft.Maui.Essentials;assembly=Microsoft.Maui.Essentials"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="Samples.View.PermissionsPage"
             Title="Permissions">

    <views:BasePage.BindingContext>
        <viewmodels:PermissionsViewModel x:Name="viewModel" />
    </views:BasePage.BindingContext>

    <Grid RowDefinitions="Auto,Auto,*">
        <Label Text="Request various permissions." FontAttributes="Bold" Margin="12" />

        <!-- Location Permissions Consistency Test Section -->
        <StackLayout Grid.Row="1" Margin="12" Spacing="8" BackgroundColor="LightYellow">
            <Label Text="Location Permissions Consistency Test" FontAttributes="Bold" FontSize="16" />
            <Label Text="Test CheckStatusAsync vs RequestAsync consistency for partial location permissions" FontSize="12" TextColor="Gray" />
            
            <Grid RowDefinitions="Auto,Auto" ColumnDefinitions="*,*">
                <!-- LocationWhenInUse Test -->
                <StackLayout Grid.Row="0" Grid.Column="0" Margin="5">
                    <Label Text="LocationWhenInUse" FontAttributes="Bold" />
                    <Label x:Name="LocationWhenInUseCheckLabel" Text="Check: Unknown" />
                    <Label x:Name="LocationWhenInUseRequestLabel" Text="Request: Unknown" />
                    <Button Text="Test Consistency" x:Name="TestLocationWhenInUseButton" Clicked="TestLocationWhenInUse_Clicked" />
                </StackLayout>
                
                <!-- LocationAlways Test -->
                <StackLayout Grid.Row="0" Grid.Column="1" Margin="5">
                    <Label Text="LocationAlways" FontAttributes="Bold" />
                    <Label x:Name="LocationAlwaysCheckLabel" Text="Check: Unknown" />
                    <Label x:Name="LocationAlwaysRequestLabel" Text="Request: Unknown" />
                    <Button Text="Test Consistency" x:Name="TestLocationAlwaysButton" Clicked="TestLocationAlways_Clicked" />
                </StackLayout>
            </Grid>
            
            <Label x:Name="ConsistencyResultLabel" Text="Consistency: Not tested" FontAttributes="Bold" HorizontalOptions="Center" />
        </StackLayout>

        <ListView HasUnevenRows="True" ItemsSource="{Binding PermissionItems}" Grid.Row="2">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Grid Padding="12" RowSpacing="0" HeightRequest="90"
                              RowDefinitions="*,*,*" ColumnDefinitions="*,Auto,Auto">

                            <Label Text="{Binding Title}" FontAttributes="Bold"
                                   VerticalOptions="Center" Grid.Row="0" Grid.Column="0" />
                            <Label Text="{Binding Status, Mode=OneWay}"
                                   VerticalOptions="Center" Grid.Row="1" Grid.Column="0" />
                            <Label Text="{Binding Rationale, Mode=OneWay}"
                                   VerticalOptions="Center" Grid.Row="2" Grid.Column="0" />

                            <Button Text="Check" Command="{Binding CheckStatusCommand}"
                                    Grid.Row="0" Grid.RowSpan="2" Grid.Column="1" VerticalOptions="Center" />
                            <Button Text="Request" Command="{Binding RequestCommand}"
                                    Grid.Row="0" Grid.RowSpan="2" Grid.Column="2" VerticalOptions="Center" />

                            <Button Text="Show Rationale" Command="{Binding ShouldShowRationaleCommand}"
                                    Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" VerticalOptions="Center" />

                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>

</views:BasePage>
