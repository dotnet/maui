<views:BasePage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                xmlns:views="clr-namespace:Samples.View"
                xmlns:viewmodels="clr-namespace:Samples.ViewModel"
                x:Class="Samples.View.SecureStoragePage"
                Title="Secure Storage">
    <views:BasePage.BindingContext>
        <viewmodels:SecureStorageViewModel />
    </views:BasePage.BindingContext>

    <Grid RowDefinitions="Auto,*">
        <Label Text="Easily store secure data." FontAttributes="Bold" Margin="12" />

        <ScrollView Grid.Row="1">
            <StackLayout Padding="12,0,12,12" Spacing="6">
                <Label Text="Key:" />
                <Entry Placeholder="Enter key..." Text="{Binding Key}" />

                <Label Text="Value:" />
                <Editor Placeholder="Enter text..." Text="{Binding SecuredValue}"
                        AutoSize="TextChanges" />

                <Label Text="Enter key, and click 'Load' to get its paired value." />
                <Button Text="Load" Command="{Binding LoadCommand}" IsEnabled="{Binding IsNotBusy}" />

                <Label Text="Enter key and value, and click 'Save' to save the pair." />
                <Button Text="Save" Command="{Binding SaveCommand}" IsEnabled="{Binding IsNotBusy}" />

                <Label Text="Enter key, and click 'Remove' to remove the paired value." />
                <Button Text="Remove" Command="{Binding RemoveCommand}" IsEnabled="{Binding IsNotBusy}" />

                <Label Text="Click 'Remove All' to clear all saved key-value pairs." Margin="0,20,0,0" />
                <Button Text="Remove All" Command="{Binding RemoveAllCommand}" IsEnabled="{Binding IsNotBusy}" />
            </StackLayout>
        </ScrollView>
    </Grid>

</views:BasePage>