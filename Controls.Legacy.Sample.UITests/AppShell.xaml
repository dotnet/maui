<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Maui.Controls.Legacy.Sample.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Maui.Controls.Legacy.Sample"
    xmlns:pages="clr-namespace:Maui.Controls.Legacy.Sample.Pages"
    Title="Maui.Controls.Legacy.Sample"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title=".NET MAUI">
            <ShellContent
                Title=".NET MAUI"
                ContentTemplate="{DataTemplate pages:MainPage}"
                Route="Main" />
        </Tab>
        <Tab Title=".NET MAUI + Platform">
            <ShellContent
                Title=".NET MAUI + Platform"
                ContentTemplate="{DataTemplate pages:PlatformsPage}"
                Route="Platforms" />
        </Tab>
    </TabBar>

</Shell>
