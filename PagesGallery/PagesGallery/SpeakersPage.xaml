<?xml version="1.0" encoding="utf-8"?>
<p:ListDataPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:p="clr-namespace:System.Maui.Pages;assembly=System.Maui.Pages" x:Class="PagesGallery.SpeakersPage" Title="Speakers" DetailTemplate="{StaticResource SpeakerDetailTemplate}" StyleClass="Speakers">
    <p:DataPage.DataSource>
        <p:JsonDataSource Source="https://demo7391822.mockable.io/speakers" />
    </p:DataPage.DataSource>
    <p:DataPage.DefaultItemTemplate>
        <DataTemplate>
            <ViewCell>
                <StackLayout Orientation="Horizontal">
                    <Image Source="{Binding Value[picture]}" />
                    <StackLayout Orientation="Vertical">
                        <Label Text="{Binding Value[name]}" FontFamily="PTM55FT#PTMono-Regular"/>
                        <Label Text="{Binding Value[twitter]}" FontFamily="CuteFont-Regular"/>
                    </StackLayout>
                </StackLayout>
            </ViewCell>
        </DataTemplate>
    </p:DataPage.DefaultItemTemplate>
</p:ListDataPage>